---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title?: string;
}

const { title = 'Admin - FashionMarket' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<BaseLayout title={title}>
  <div class="min-h-screen bg-gray-50 flex">
    {/* Sidebar */}
    <aside class="w-64 bg-brand-navy text-white flex-shrink-0">
      <div class="sticky top-0 h-screen overflow-y-auto">
        {/* Logo */}
        <div class="p-6 border-b border-brand-charcoal/30">
          <a href="/admin" class="font-serif text-2xl font-bold block">
            FashionMarket
          </a>
          <p class="text-sm text-brand-cream/70 mt-1">Panel de Administraci贸n</p>
        </div>

        {/* Navigation */}
        <nav class="p-4 space-y-1">
          {/* Dashboard */}
          <a 
            href="/admin" 
            class={`flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors ${
              currentPath === '/admin' 
                ? 'bg-brand-gold text-brand-navy' 
                : 'hover:bg-brand-charcoal/30'
            }`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>Dashboard</span>
          </a>

          {/* Productos */}
          <a 
            href="/admin/productos" 
            class={`flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors ${
              currentPath.startsWith('/admin/productos') 
                ? 'bg-brand-gold text-brand-navy' 
                : 'hover:bg-brand-charcoal/30'
            }`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            <span>Productos</span>
          </a>

          {/* Pedidos */}
          <a 
            href="/admin/pedidos" 
            class={`flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors ${
              currentPath.startsWith('/admin/pedidos') 
                ? 'bg-brand-gold text-brand-navy' 
                : 'hover:bg-brand-charcoal/30'
            }`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
            <span>Pedidos</span>
          </a>

          {/* Devoluciones */}
          <a 
            href="/admin/devoluciones" 
            class={`flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors ${
              currentPath.startsWith('/admin/devoluciones') 
                ? 'bg-brand-gold text-brand-navy' 
                : 'hover:bg-brand-charcoal/30'
            }`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
            </svg>
            <span>Devoluciones</span>
          </a>

          {/* Clientes */}
          <a 
            href="/admin/clientes" 
            class={`flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors ${
              currentPath.startsWith('/admin/clientes') 
                ? 'bg-brand-gold text-brand-navy' 
                : 'hover:bg-brand-charcoal/30'
            }`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <span>Clientes</span>
          </a>

          {/* Configuraci贸n */}
          <a 
            href="/admin/configuracion" 
            class={`flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors ${
              currentPath.startsWith('/admin/configuracion') 
                ? 'bg-brand-gold text-brand-navy' 
                : 'hover:bg-brand-charcoal/30'
            }`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Configuraci贸n</span>
          </a>
        </nav>

        {/* Bottom Section */}
        <div class="absolute bottom-0 w-64 p-4 border-t border-brand-charcoal/30">
          <a href="/" target="_blank" class="flex items-center space-x-3 px-4 py-3 text-sm hover:bg-brand-charcoal/30 rounded-lg transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            <span>Ver tienda</span>
          </a>
          <form action="/api/auth/logout" method="POST" class="mt-2">
            <button type="submit" class="w-full flex items-center space-x-3 px-4 py-3 text-sm hover:bg-brand-charcoal/30 rounded-lg transition-colors text-left">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>Cerrar Sesi贸n</span>
            </button>
          </form>
        </div>
      </div>
    </aside>

    {/* Main Content */}
    <main class="flex-1 overflow-x-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>
  </div>
</BaseLayout>

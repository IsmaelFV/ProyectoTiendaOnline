---
import { formatPrice } from '@lib/utils';
import { ImagePresets } from '@lib/cloudinary';
import type { Product } from '@lib/supabase';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const mainImage = product.images?.[0] || '/placeholder.svg';
// Optimizar imagen para tarjetas de producto (400x500px)
const optimizedImage = ImagePresets.productCard(mainImage);
const hasDiscount = product.is_on_sale && product.sale_price && product.sale_price < product.price;
const discountPercent = hasDiscount ? Math.round((1 - product.sale_price! / product.price) * 100) : 0;
const displayPrice = hasDiscount ? product.sale_price! : product.price;
---

<article class="product-card-premium group" data-product-id={product.id}>
  {/* Wishlist button - fuera del link para evitar navegación */}
  <button 
    class="wishlist-btn" 
    aria-label="Añadir a favoritos"
    data-wishlist-id={product.id}
  >
    <svg class="w-5 h-5 wishlist-icon-outline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
    </svg>
    <svg class="w-5 h-5 wishlist-icon-filled hidden" fill="currentColor" viewBox="0 0 24 24">
      <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
    </svg>
  </button>

  <a href={`/productos/${product.slug}`} class="block">
    <!-- Image container -->
    <div class="product-image-container">
      <img
        src={optimizedImage}
        alt={product.name}
        class="product-image"
        loading="lazy"
      />
      
      <!-- Badges -->
      <div class="absolute top-3 left-3 flex flex-col gap-1.5 z-10">
        {hasDiscount && (
          <span class="badge-discount">
            -{discountPercent}%
          </span>
        )}
        {product.stock <= 3 && product.stock > 0 && (
          <span class="badge-low-stock">
            ¡Últimas unidades!
          </span>
        )}
      </div>
      
      <!-- Overlay gradient -->
      <div class="product-overlay"></div>
      
      <!-- Quick view -->
      <div class="quick-view-btn">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        <span>Ver detalles</span>
      </div>
    </div>
    
    <!-- Content -->
    <div class="product-content">
      <div class="product-category">
        {product.category?.name || 'Moda'}
      </div>
      
      <h3 class="product-name">
        {product.name}
      </h3>
      
      <div class="product-price-container">
        {hasDiscount ? (
          <>
            <span class="product-price-current">{formatPrice(displayPrice)}</span>
            <span class="product-price-original">{formatPrice(product.price)}</span>
          </>
        ) : (
          <span class="product-price-current">{formatPrice(product.price)}</span>
        )}
      </div>
      
      <!-- Stock indicator -->
      <div class="product-stock">
        {product.stock > 0 ? (
          <div class="stock-available">
            <span class="stock-dot"></span>
            <span>Disponible</span>
          </div>
        ) : (
          <div class="stock-unavailable">
            <span class="stock-dot-red"></span>
            <span>Agotado</span>
          </div>
        )}
      </div>
    </div>
  </a>
</article>

<style is:global>
  .product-card-premium {
    position: relative;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 14px;
    overflow: hidden;
    transition: all 0.35s ease;
  }
  
  .product-card-premium:hover {
    transform: translateY(-4px);
    border-color: rgba(212, 175, 55, 0.15);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
  }
  
  .product-image-container {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
    background: #111;
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .product-card-premium:hover .product-image {
    transform: scale(1.05);
  }
  
  .product-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, 
      transparent 0%, 
      transparent 50%, 
      rgba(6, 8, 7, 0.8) 100%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  .product-card-premium:hover .product-overlay {
    opacity: 1;
  }
  
  .badge-discount {
    display: inline-flex;
    align-items: center;
    padding: 4px 10px;
    font-size: 10px;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: #0a0a0a;
    background: linear-gradient(135deg, #d4af37 0%, #e8c96d 100%);
    border-radius: 6px;
  }
  
  .badge-low-stock {
    display: inline-flex;
    align-items: center;
    padding: 4px 10px;
    font-size: 10px;
    font-weight: 600;
    color: #fef3c7;
    background: rgba(245, 158, 11, 0.2);
    border-radius: 6px;
    backdrop-filter: blur(8px);
  }
  
  .wishlist-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 34px;
    height: 34px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(6, 8, 7, 0.6);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: #e5e7eb;
    opacity: 0;
    transform: translateY(-8px);
    transition: all 0.3s ease;
    z-index: 10;
  }
  
  .product-card-premium:hover .wishlist-btn {
    opacity: 1;
    transform: translateY(0);
  }
  
  .wishlist-btn:hover {
    background: rgba(239, 68, 68, 0.2);
    border-color: rgba(239, 68, 68, 0.4);
    color: #f87171;
  }

  .wishlist-btn.active {
    background: rgba(239, 68, 68, 0.25);
    border-color: rgba(239, 68, 68, 0.5);
    color: #f87171;
    opacity: 1;
    transform: translateY(0);
  }

  .wishlist-btn.active .wishlist-icon-outline {
    display: none;
  }

  .wishlist-btn.active .wishlist-icon-filled {
    display: block;
  }
  
  .quick-view-btn {
    position: absolute;
    bottom: 14px;
    left: 50%;
    transform: translateX(-50%) translateY(16px);
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    font-size: 12px;
    font-weight: 600;
    color: #0a0a0a;
    background: rgba(255,255,255,0.92);
    border-radius: 20px;
    opacity: 0;
    transition: all 0.35s ease;
    z-index: 10;
  }
  
  .product-card-premium:hover .quick-view-btn {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  
  .quick-view-btn:hover {
    background: linear-gradient(135deg, #d4af37, #e8c96d);
    box-shadow: 0 8px 24px rgba(212, 175, 55, 0.3);
  }
  
  .product-content {
    padding: 0.875rem 1rem 1rem;
  }
  
  .product-category {
    font-size: 10px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #737373;
    margin-bottom: 4px;
  }
  
  .product-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: #e5e5e5;
    line-height: 1.35;
    margin-bottom: 8px;
    transition: color 0.3s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .product-card-premium:hover .product-name {
    color: #d4af37;
  }
  
  .product-price-container {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 6px;
  }
  
  .product-price-current {
    font-size: 1rem;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: -0.02em;
  }
  
  .product-price-original {
    font-size: 0.8125rem;
    color: #525252;
    text-decoration: line-through;
  }
  
  .product-stock {
    font-size: 11px;
  }
  
  .stock-available {
    display: flex;
    align-items: center;
    gap: 5px;
    color: #737373;
  }
  
  .stock-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: #10b981;
  }
  
  .stock-unavailable {
    display: flex;
    align-items: center;
    gap: 5px;
    color: #ef4444;
  }
  
  .stock-dot-red {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: #ef4444;
  }
</style>

<script>
  // === WISHLIST: inicializar botones de favoritos ===
  function initWishlistButtons() {
    const buttons = document.querySelectorAll<HTMLButtonElement>('[data-wishlist-id]');
    if (buttons.length === 0) return;

    // 1. Comprobar cuáles están en favoritos
    const productIds = Array.from(buttons).map(b => b.dataset.wishlistId).filter(Boolean);
    
    fetch(`/api/wishlist/check?productIds=${productIds.join(',')}`)
      .then(r => r.json())
      .then(data => {
        const favIds: string[] = data.ids || [];
        buttons.forEach(btn => {
          if (favIds.includes(btn.dataset.wishlistId!)) {
            btn.classList.add('active');
          }
        });
      })
      .catch(() => { /* usuario no autenticado, no pasa nada */ });

    // 2. Click handler
    buttons.forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();

        const productId = btn.dataset.wishlistId;
        if (!productId) return;

        // Feedback visual inmediato (optimistic)
        const wasActive = btn.classList.contains('active');
        btn.classList.toggle('active');

        try {
          const res = await fetch('/api/wishlist/toggle', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId }),
          });

          if (res.status === 401) {
            // Revertir y redirigir al login
            btn.classList.toggle('active');
            window.location.href = '/auth/login';
            return;
          }

          if (!res.ok) {
            // Revertir si hay error
            btn.classList.toggle('active');
          }
        } catch {
          // Revertir si falla la red
          btn.classList.toggle('active');
        }
      });
    });
  }

  // Ejecutar al cargar y en cada navegación (view transitions)
  initWishlistButtons();
  document.addEventListener('astro:page-load', initWishlistButtons);
</script>

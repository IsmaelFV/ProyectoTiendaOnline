---
interface Props {
  images: string[];
  productName: string;
}

const { images, productName } = Astro.props;
const mainImage = images[0] || '/placeholder.jpg';
const hasMultiple = images.length > 1;
---

<div class="gallery-wrapper">
  <!-- Imagen principal -->
  <div class="gallery-main">
    <img
      src={mainImage}
      alt={productName}
      class="gallery-main-img"
      id="main-image"
    />
  </div>
  
  <!-- Thumbnails -->
  {hasMultiple && (
    <div class="gallery-thumbs">
      {images.map((image, index) => (
        <button
          type="button"
          class="gallery-thumb"
          data-index={index}
          onclick={`
            document.getElementById('main-image').src = '${image}';
            document.querySelectorAll('.gallery-thumb').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
          `}
        >
          <img
            src={image}
            alt={`${productName} - imagen ${index + 1}`}
            class="w-full h-full object-cover"
          />
        </button>
      ))}
    </div>
  )}
</div>

<style>
  .gallery-wrapper {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .gallery-main {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 16px;
    background: #171717;
    border: 1px solid rgba(255, 255, 255, 0.06);
  }

  .gallery-main-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .gallery-main:hover .gallery-main-img {
    transform: scale(1.03);
  }

  .gallery-thumbs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(64px, 1fr));
    gap: 8px;
    max-width: 100%;
  }

  .gallery-thumb {
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 10px;
    border: 2px solid rgba(255, 255, 255, 0.08);
    background: #171717;
    cursor: pointer;
    transition: all 0.25s ease;
    opacity: 0.6;
  }

  .gallery-thumb:hover {
    opacity: 1;
    border-color: rgba(212, 175, 55, 0.4);
  }

  .gallery-thumb:first-child,
  .gallery-thumb.active {
    opacity: 1;
    border-color: #d4af37;
    box-shadow: 0 0 12px rgba(212, 175, 55, 0.2);
  }

  @media (min-width: 1024px) {
    .gallery-main {
      aspect-ratio: 4 / 5;
      max-height: 520px;
    }
  }
</style>

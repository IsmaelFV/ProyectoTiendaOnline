---
interface Props {
  images: string[];
  productName: string;
}

const { images, productName } = Astro.props;
const mainImage = images[0] || '/placeholder.jpg';
---

<div class="space-y-4">
  <div class="aspect-[3/4] overflow-hidden bg-gray-100">
    <img
      src={mainImage}
      alt={productName}
      class="w-full h-full object-cover"
      id="main-image"
    />
  </div>
  
  {images.length > 1 && (
    <div class="grid grid-cols-4 gap-4">
      {images.map((image, index) => (
        <button
          type="button"
          class="aspect-square overflow-hidden bg-gray-100 border-2 border-transparent hover:border-brand-gold transition-colors"
          onclick={`document.getElementById('main-image').src = '${image}'`}
        >
          <img
            src={image}
            alt={`${productName} - imagen ${index + 1}`}
            class="w-full h-full object-cover"
          />
        </button>
      ))}
    </div>
  )}
</div>

<style>
  .footer-premium {
    background: linear-gradient(180deg, 
      rgba(14, 18, 16, 0.95) 0%, 
      rgba(6, 8, 7, 1) 100%
    );
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .footer-glow-top {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(212, 175, 55, 0.3) 50%, 
      transparent 100%
    );
  }
  
  .footer-logo-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.15) 0%, transparent 100%);
    border-radius: 12px;
    border: 1px solid rgba(212, 175, 55, 0.2);
  }
  
  .footer-heading {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #ffffff;
    margin-bottom: 1.25rem;
    position: relative;
    padding-bottom: 0.75rem;
  }
  
  .footer-heading::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 24px;
    height: 2px;
    background: linear-gradient(90deg, #d4af37, transparent);
    border-radius: 1px;
  }
  
  .footer-link {
    display: inline-block;
    color: #9ca3af;
    font-size: 14px;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .footer-link:hover {
    color: #d4af37;
    transform: translateX(4px);
  }
  
  .footer-input {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 10px;
    padding: 12px 16px;
    color: #ffffff;
    font-size: 14px;
    outline: none;
    transition: all 0.3s ease;
  }
  
  .footer-input:focus {
    border-color: rgba(212, 175, 55, 0.5);
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }
  
  .footer-input::placeholder {
    color: #6b7280;
  }
  
  .footer-subscribe-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #d4af37 0%, #e8c96d 100%);
    border-radius: 10px;
    color: #060807;
    transition: all 0.3s ease;
  }
  
  .footer-subscribe-btn:hover {
    transform: translateX(4px);
    box-shadow: 0 0 30px rgba(212, 175, 55, 0.4);
  }
  
  .social-icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: #9ca3af;
    transition: all 0.3s ease;
  }
  
  .social-icon-btn:hover {
    background: rgba(212, 175, 55, 0.1);
    border-color: rgba(212, 175, 55, 0.3);
    color: #d4af37;
    transform: translateY(-3px);
  }
  
  .trust-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    color: #10b981;
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
  }
  
  .footer-bottom::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      transparent 100%
    );
  }
</style>

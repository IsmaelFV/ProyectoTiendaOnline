<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const alert = document.getElementById('contact-alert')!;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const submitText = document.getElementById('submit-text')!;
  const submitSpinner = document.getElementById('submit-spinner')!;
  const charCount = document.getElementById('char-count')!;
  const messageTextarea = document.getElementById('message') as HTMLTextAreaElement;

  // Contador de caracteres
  messageTextarea?.addEventListener('input', () => {
    charCount.textContent = messageTextarea.value.length.toString();
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Deshabilitar bot√≥n
    submitBtn.disabled = true;
    submitText.textContent = 'Enviando...';
    submitSpinner.classList.remove('hidden');
    alert.classList.add('hidden');

    const formData = new FormData(form);

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          name: formData.get('name'),
          email: formData.get('email'),
          subject: formData.get('subject'),
          message: formData.get('message'),
        }),
      });

      const result = await response.json();

      // Helper seguro: construir alerta sin innerHTML con datos del servidor
      function showAlert(type: 'success' | 'error', text: string) {
        const isOk = type === 'success';
        alert.className = `mb-6 rounded-xl p-4 text-sm ${
          isOk
            ? 'bg-emerald-500/10 border border-emerald-500/30 text-emerald-300'
            : 'bg-red-500/10 border border-red-500/30 text-red-300'
        }`;
        alert.textContent = '';
        const wrapper = document.createElement('div');
        wrapper.className = 'flex items-center space-x-2';
        const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
        svg.setAttribute('class', 'w-5 h-5 shrink-0');
        svg.setAttribute('fill', 'none');
        svg.setAttribute('stroke', 'currentColor');
        svg.setAttribute('viewBox', '0 0 24 24');
        const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        path.setAttribute('stroke-linecap', 'round');
        path.setAttribute('stroke-linejoin', 'round');
        path.setAttribute('stroke-width', '2');
        path.setAttribute('d', isOk
          ? 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
          : 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z');
        svg.appendChild(path);
        const span = document.createElement('span');
        span.textContent = text;
        wrapper.appendChild(svg);
        wrapper.appendChild(span);
        alert.appendChild(wrapper);
        alert.classList.remove('hidden');
      }

      if (result.success) {
        showAlert('success', '¬°Mensaje enviado! ' + (result.message || ''));
        form.reset();
        charCount.textContent = '0';
      } else {
        showAlert('error', result.error || 'Error desconocido');
      }
    } catch (error) {
      alert.className = 'mb-6 rounded-xl p-4 text-sm bg-red-500/10 border border-red-500/30 text-red-300';
      alert.textContent = '';
      const wrapper = document.createElement('div');
      wrapper.className = 'flex items-center space-x-2';
      const span = document.createElement('span');
      span.textContent = 'Error de conexi√≥n. Comprueba tu conexi√≥n e int√©ntalo de nuevo.';
      wrapper.appendChild(span);
      alert.appendChild(wrapper);
      alert.classList.remove('hidden');
    } finally {
      submitBtn.disabled = false;
      submitText.textContent = 'Enviar mensaje';
      submitSpinner.classList.add('hidden');
    }
  });
</script>

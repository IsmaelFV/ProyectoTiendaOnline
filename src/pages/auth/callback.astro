/**
 * ============================================================================
 * OAuth Callback Handler
 * ============================================================================
 * Maneja la redireccion despues de autenticacion con Google.
 * 
 * IMPORTANTE: Los hash fragments (#access_token=...) NUNCA llegan al servidor.
 * Por eso el procesamiento real se hace en el script del lado del cliente.
 * El frontmatter SSR solo verifica si ya hay cookies de sesion previas.
 * ============================================================================
 */

// Verificar si ya hay cookies de sesion (por si el usuario llega aqui con sesion activa)
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (accessToken && refreshToken) {
  try {
    const { createClient } = await import('@supabase/supabase-js');
    const supabaseAdmin = createClient(
      import.meta.env.PUBLIC_SUPABASE_URL,
      import.meta.env.SUPABASE_SERVICE_ROLE_KEY,
      { auth: { autoRefreshToken: false, persistSession: false } }
    );

    const { data } = await supabaseAdmin.auth.getUser(accessToken);
    
    if (data?.user) {
      const { data: adminData } = await supabaseAdmin
        .from('admin_users')
        .select('id')
        .eq('user_id', data.user.id)
        .maybeSingle();

      if (adminData) {
        return Astro.redirect('/admin');
      }
      return Astro.redirect('/');
    }
  } catch (err) {
    console.warn('[Callback SSR] Error verificando sesion:', err);
  }
}

// Si no hay sesion SSR, renderizar la pagina con el script del cliente
// que procesara los hash fragments del OAuth
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Autenticando...</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }
    .loader {
      text-align: center;
      color: #d4af37;
    }
    .spinner {
      border: 4px solid rgba(212, 175, 55, 0.1);
      border-top: 4px solid #d4af37;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="loader">
    <div class="spinner"></div>
    <p>Autenticando con Google...</p>
  </div>

  <script type="module">
    import { supabase } from '/src/lib/supabase';

    function setAuthCookie(name, value, maxAge) {
      const isSecure = window.location.protocol === 'https:';
      const parts = [
        `${name}=${value}`,
        'Path=/',
        `Max-Age=${maxAge}`,
        'SameSite=Lax',
      ];
      if (isSecure) {
        parts.push('Secure');
      }
      document.cookie = parts.join('; ');
    }

    (async () => {
      // Procesar tokens del hash fragment
      const hash = window.location.hash.substring(1);
      const params = new URLSearchParams(hash);
      const accessToken = params.get('access_token');
      const refreshToken = params.get('refresh_token');

      if (accessToken && refreshToken) {
        const maxAge = 60 * 60 * 24 * 7; // 7 dias
        
        // Setear sesion en Supabase client
        try {
          await supabase.auth.setSession({
            access_token: accessToken,
            refresh_token: refreshToken,
          });
        } catch (e) {
          console.warn('[CALLBACK] Error seteando sesion:', e);
        }
        
        // Guardar en cookies para SSR
        setAuthCookie('sb-access-token', accessToken, maxAge);
        setAuthCookie('sb-refresh-token', refreshToken, maxAge);
        
        // Verificar si es admin
        try {
          const { data: { user } } = await supabase.auth.getUser();
          if (user) {
            const res = await fetch('/api/auth/check-admin', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ userId: user.id }),
            });
            if (res.ok) {
              const { isAdmin } = await res.json();
              if (isAdmin) {
                console.log('[CALLBACK] Usuario es ADMIN, redirigiendo a /admin');
                window.location.href = '/admin';
                return;
              }
            }
          }
        } catch (err) {
          console.warn('[CALLBACK] Error verificando admin:', err);
        }

        // Usuario normal - redirigir al home
        window.location.href = '/';
      } else {
        // Sin tokens en hash - redirigir al login
        window.location.href = '/auth/login?error=Error al procesar la autenticacion';
      }
    })();
  </script>
</body>
</html>

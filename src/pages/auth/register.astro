---
import BaseLayout from '@layouts/BaseLayout.astro';

const errorMessage = Astro.url.searchParams.get('error');
const successMessage = Astro.url.searchParams.get('success');
---

<BaseLayout title="Crear Cuenta - FashionMarket">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 bg-gradient-dark"></div>
    <div class="absolute top-1/3 right-1/4 w-[400px] h-[400px] bg-accent-emerald/15 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-1/3 left-1/4 w-[300px] h-[300px] bg-accent-teal/10 rounded-full blur-[100px]"></div>
    
    <div class="relative max-w-md w-full">
      <!-- Card container -->
      <div class="glass-panel p-8 space-y-8">
        {/* Logo y título */}
        <div class="text-center">
          <a href="/" class="inline-block">
            <h1 class="font-serif text-4xl font-bold text-gradient">
              FashionMarket
            </h1>
          </a>
          <h2 class="mt-6 text-2xl font-bold text-white">
            Crea tu cuenta
          </h2>
          <p class="mt-2 text-sm text-gray-400">
            ¿Ya tienes cuenta?{' '}
            <a href="/auth/login" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
              Inicia sesión aquí
            </a>
          </p>
        </div>

        {/* Mensajes */}
        {errorMessage && (
          <div class="bg-red-500/10 border border-red-500/30 text-red-400 px-4 py-3 rounded-xl">
            <p class="text-sm">{errorMessage}</p>
          </div>
        )}
        
        {successMessage && (
          <div class="bg-emerald-500/10 border border-emerald-500/30 text-emerald-400 px-4 py-3 rounded-xl">
            <p class="text-sm">{successMessage}</p>
          </div>
        )}

        {/* Formulario de registro */}
        <form class="space-y-6" action="/api/auth/register" method="POST">
          <div class="space-y-4">
            {/* Nombre completo */}
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-2">
                Nombre completo
              </label>
              <input
                id="name"
                name="name"
                type="text"
                autocomplete="name"
                required
                class="input-field"
                placeholder="Juan Pérez"
              />
            </div>

            {/* Email */}
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                Correo electrónico
              </label>
              <input
                id="email"
                name="email"
                type="email"
                autocomplete="email"
                required
                class="input-field"
                placeholder="tu@email.com"
              />
            </div>

            {/* Contraseña */}
            <div>
              <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                Contraseña
              </label>
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="new-password"
                required
                minlength="6"
                class="input-field"
                placeholder="••••••••"
              />
              <p class="mt-1 text-xs text-gray-500">Mínimo 6 caracteres</p>
            </div>

            {/* Confirmar contraseña */}
            <div>
              <label for="confirmPassword" class="block text-sm font-medium text-gray-300 mb-2">
                Confirmar contraseña
              </label>
              <input
                id="confirmPassword"
                name="confirmPassword"
                type="password"
                autocomplete="new-password"
                required
                minlength="6"
                class="input-field"
                placeholder="••••••••"
              />
            </div>
          </div>

          {/* Términos y condiciones */}
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <input
                id="terms"
                name="terms"
                type="checkbox"
                required
                class="h-4 w-4 bg-dark-card border-white/20 rounded text-accent-gold focus:ring-accent-gold/50"
              />
            </div>
            <div class="ml-3 text-sm">
              <label for="terms" class="text-gray-400">
                Acepto los{' '}
                <a href="/terminos" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
                  Términos y Condiciones
                </a>
                {' '}y la{' '}
                <a href="/privacidad" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
                  Política de Privacidad
                </a>
              </label>
            </div>
          </div>

          {/* Newsletter */}
          <div class="flex items-center">
            <input
              id="newsletter"
              name="newsletter"
              type="checkbox"
              class="h-4 w-4 bg-dark-card border-white/20 rounded text-accent-gold focus:ring-accent-gold/50"
            />
            <label for="newsletter" class="ml-2 block text-sm text-gray-300">
              Quiero recibir ofertas y novedades por email
            </label>
          </div>

          {/* Botón de submit */}
          <div>
            <button
              type="submit"
              class="btn-primary w-full flex justify-center items-center gap-3"
            >
              <svg
                class="h-5 w-5"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
              </svg>
              Crear cuenta
            </button>
          </div>

          {/* Divider */}
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-white/10"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-dark-surface text-gray-500">O regístrate con</span>
            </div>
          </div>

          {/* Registro social */}
          <div class="grid grid-cols-2 gap-3">
            <button
              type="button"
              class="btn-secondary flex justify-center items-center gap-2 py-3"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84" />
              </svg>
              <span class="text-sm">Twitter</span>
            </button>

            <button
              type="button"
              class="btn-secondary flex justify-center items-center gap-2 py-3"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm">GitHub</span>
            </button>
          </div>
        </form>

        {/* Enlace de vuelta */}
        <div class="text-center pt-4 border-t border-white/5">
          <a href="/" class="text-sm text-gray-500 hover:text-accent-gold transition-colors flex items-center justify-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver a la tienda
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Validar que las contraseñas coincidan
    const form = document.querySelector('form');
    const password = document.getElementById('password') as HTMLInputElement;
    const confirmPassword = document.getElementById('confirmPassword') as HTMLInputElement;

    form?.addEventListener('submit', (e) => {
      if (password.value !== confirmPassword.value) {
        e.preventDefault();
        alert('Las contraseñas no coinciden');
        confirmPassword.focus();
      }
    });
  </script>
</BaseLayout>

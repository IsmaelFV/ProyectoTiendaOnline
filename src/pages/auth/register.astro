---
import BaseLayout from '@layouts/BaseLayout.astro';

const errorMessage = Astro.url.searchParams.get('error');
const successMessage = Astro.url.searchParams.get('success');
---

<BaseLayout title="Crear Cuenta - Fashion Store">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 bg-gradient-dark"></div>
    <div class="absolute top-1/3 right-1/4 w-[400px] h-[400px] bg-accent-emerald/15 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-1/3 left-1/4 w-[300px] h-[300px] bg-accent-teal/10 rounded-full blur-[100px]"></div>
    
    <div class="relative max-w-md w-full">
      <!-- Card container -->
      <div class="glass-panel p-8 space-y-8">
        {/* Logo y t√≠tulo */}
        <div class="text-center">
          <a href="/" class="inline-block">
            <h1 class="font-serif text-4xl font-bold text-gradient">
              FASHION STORE
            </h1>
          </a>
          <h2 class="mt-6 text-2xl font-bold text-white">
            Crea tu cuenta
          </h2>
          <p class="mt-2 text-sm text-gray-400">
            ¬øYa tienes cuenta?{' '}
            <a href="/auth/login" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
              Inicia sesi√≥n aqu√≠
            </a>
          </p>
        </div>

        {/* Mensajes */}
        {errorMessage && (
          <div class="bg-red-500/10 border border-red-500/30 text-red-400 px-4 py-3 rounded-xl">
            <p class="text-sm">{errorMessage}</p>
          </div>
        )}
        
        {successMessage && (
          <div class="bg-emerald-500/10 border border-emerald-500/30 text-emerald-400 px-4 py-3 rounded-xl">
            <p class="text-sm">{successMessage}</p>
          </div>
        )}

        {/* Formulario de registro */}
        <form class="space-y-6" action="/api/auth/register" method="POST">
          <div class="space-y-4">
            {/* Nombre completo */}
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-2">
                Nombre completo
              </label>
              <input
                id="name"
                name="name"
                type="text"
                autocomplete="name"
                required
                class="input-field"
                placeholder="Juan P√©rez"
              />
            </div>

            {/* Email */}
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                Correo electr√≥nico
              </label>
              <input
                id="email"
                name="email"
                type="email"
                autocomplete="email"
                required
                class="input-field"
                placeholder="tu@email.com"
              />
            </div>

            {/* Contrase√±a */}
            <div>
              <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                Contrase√±a
              </label>
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="new-password"
                required
                minlength="6"
                class="input-field"
                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              />
              <p class="mt-1 text-xs text-gray-500">M√≠nimo 6 caracteres</p>
            </div>

            {/* Confirmar contrase√±a */}
            <div>
              <label for="confirmPassword" class="block text-sm font-medium text-gray-300 mb-2">
                Confirmar contrase√±a
              </label>
              <input
                id="confirmPassword"
                name="confirmPassword"
                type="password"
                autocomplete="new-password"
                required
                minlength="6"
                class="input-field"
                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              />
            </div>
          </div>

          {/* T√©rminos y condiciones */}
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <input
                id="terms"
                name="terms"
                type="checkbox"
                required
                class="h-4 w-4 bg-dark-card border-white/20 rounded text-accent-gold focus:ring-accent-gold/50"
              />
            </div>
            <div class="ml-3 text-sm">
              <label for="terms" class="text-gray-400">
                Acepto los{' '}
                <a href="/terminos" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
                  T√©rminos y Condiciones
                </a>
                {' '}y la{' '}
                <a href="/politica-privacidad" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
                  Pol√≠tica de Privacidad
                </a>
              </label>
            </div>
          </div>

          {/* Newsletter */}
          <div class="flex items-center">
            <input
              id="newsletter"
              name="newsletter"
              type="checkbox"
              class="h-4 w-4 bg-dark-card border-white/20 rounded text-accent-gold focus:ring-accent-gold/50"
            />
            <label for="newsletter" class="ml-2 block text-sm text-gray-300">
              Quiero recibir ofertas y novedades por email
            </label>
          </div>

          {/* Bot√≥n de submit */}
          <div>
            <button
              type="submit"
              class="btn-primary w-full flex justify-center items-center gap-3"
            >
              <svg
                class="h-5 w-5"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
              </svg>
              Crear cuenta
            </button>
          </div>

          {/* Divider */}
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-white/10"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-dark-surface text-gray-500">O reg√≠strate con</span>
            </div>
          </div>

          {/* Registro social */}
          <div class="flex justify-center">
            <button
              type="button"
              id="google-register-btn"
              class="btn-secondary flex justify-center items-center gap-3 py-3 px-6 w-full max-w-sm"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
              <span class="text-sm font-medium">Registrarse con Google</span>
            </button>
          </div>
        </form>

        {/* Enlace de vuelta */}
        <div class="text-center pt-4 border-t border-white/5">
          <a href="/" class="text-sm text-gray-500 hover:text-accent-gold transition-colors flex items-center justify-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver a la tienda
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { customAlert } from '../../lib/notifications';
    import { supabase } from '../../lib/supabase';
    
    // Validar que las contrase√±as coincidan
    const form = document.querySelector('form');
    const password = document.getElementById('password') as HTMLInputElement;
    const confirmPassword = document.getElementById('confirmPassword') as HTMLInputElement;
    const googleBtn = document.getElementById('google-register-btn');

    form?.addEventListener('submit', (e) => {
      if (password.value !== confirmPassword.value) {
        e.preventDefault();
        customAlert('Las contrase√±as no coinciden', 'error');
        confirmPassword.focus();
      }
    });

    // Google OAuth para registro
    googleBtn?.addEventListener('click', async () => {
      console.log('üîê [REGISTER PAGE] Iniciando Google OAuth...');
      const { data, error } = await supabase.auth.signInWithOAuth({
        provider: 'google',
        options: {
          redirectTo: `${window.location.origin}/auth/callback`,
        }
      });
      
      if (error) {
        customAlert('Error al registrarse con Google: ' + error.message, 'error');
      }
    });
  </script>
</BaseLayout>

---
import BaseLayout from '@layouts/BaseLayout.astro';

// Si el usuario ya tiene tokens de sesion validos, redirigir en lugar de mostrar login
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (accessToken && refreshToken) {
  // Tiene cookies de sesion - verificar si son validas antes de redirigir
  try {
    const { createClient } = await import('@supabase/supabase-js');
    const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
    const supabaseServiceKey = import.meta.env.SUPABASE_SERVICE_ROLE_KEY;
    
    if (supabaseUrl && supabaseServiceKey) {
      const supabaseAdmin = createClient(supabaseUrl, supabaseServiceKey, {
        auth: { autoRefreshToken: false, persistSession: false },
      });
      
      const { data } = await supabaseAdmin.auth.getUser(accessToken);
      
      if (data?.user) {
        // Sesion valida - verificar si es admin
        const { data: adminData } = await supabaseAdmin
          .from('admin_users')
          .select('id')
          .eq('user_id', data.user.id)
          .maybeSingle();
        
        if (adminData) {
          return Astro.redirect('/admin');
        }
        return Astro.redirect('/');
      }
    }
  } catch (e) {
    // Si falla la verificacion, mostrar login normalmente
    console.log('[LOGIN PAGE SSR] Error verificando sesion existente:', e);
  }
}

const errorMessage = Astro.url.searchParams.get('error');
const successMessage = Astro.url.searchParams.get('success');
---

<BaseLayout title="Iniciar Sesión - Fashion Store">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 bg-gradient-dark"></div>
    <div class="absolute top-1/4 left-1/4 w-[400px] h-[400px] bg-accent-emerald/15 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[300px] h-[300px] bg-accent-teal/10 rounded-full blur-[100px]"></div>
    
    <div class="relative max-w-md w-full">
      <!-- Card container -->
      <div class="glass-panel p-8 space-y-8">
        {/* Logo y título */}
        <div class="text-center">
          <a href="/" class="inline-block">
            <h1 class="font-serif text-4xl font-bold text-gradient">
              FASHION STORE
            </h1>
          </a>
          <h2 class="mt-6 text-2xl font-bold text-white">
            Inicia sesión en tu cuenta
          </h2>
          <p class="mt-2 text-sm text-gray-400">
            ¿No tienes cuenta?{' '}
            <a href="/auth/register" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
              Regístrate aquí
            </a>
          </p>
        </div>

        {/* Mensaje de error */}
        {errorMessage && (
          <div class="bg-red-500/10 border border-red-500/30 text-red-400 px-4 py-3 rounded-xl">
            <p class="text-sm">{errorMessage}</p>
          </div>
        )}

        {/* Mensaje de exito (ej: registro completado) */}
        {successMessage && (
          <div class="bg-green-500/10 border border-green-500/30 text-green-400 px-4 py-3 rounded-xl">
            <p class="text-sm">{successMessage}</p>
          </div>
        )}

        {/* Formulario de login (cliente) */}
        <form id="login-form" method="POST" action="javascript:void(0)" class="space-y-6">
          <div class="space-y-4">
            {/* Email */}
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                Correo electrónico
              </label>
              <input
                id="email"
                name="email"
                type="email"
                autocomplete="email"
                required
                class="input-field"
                placeholder="tu@email.com"
              />
            </div>

            {/* Contraseña */}
            <div>
              <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                Contraseña
              </label>
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="current-password"
                required
                class="input-field"
                placeholder="••••••••"
              />
            </div>
          </div>

          {/* Recordarme y recuperar contraseña */}
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input
                id="remember-me"
                name="remember-me"
                type="checkbox"
                class="h-4 w-4 bg-dark-card border-white/20 rounded text-accent-gold focus:ring-accent-gold/50"
              />
              <label for="remember-me" class="ml-2 block text-sm text-gray-300">
                Recordarme
              </label>
            </div>

            <div class="text-sm">
              <a href="/auth/forgot-password" class="font-medium text-accent-gold hover:text-accent-gold-soft transition-colors">
                ¿Olvidaste tu contraseña?
              </a>
            </div>
          </div>

          {/* Botón de submit */}
          <div>
            <button
              type="submit"
              class="group w-full relative flex justify-center items-center gap-3 py-3.5 px-6 bg-gradient-to-r from-accent-gold to-amber-500 text-dark-bg font-bold text-sm uppercase tracking-wider rounded-xl shadow-lg shadow-accent-gold/25 hover:shadow-xl hover:shadow-accent-gold/40 hover:-translate-y-0.5 active:translate-y-0 transition-all duration-300"
            >
              <svg
                class="h-5 w-5 transition-transform duration-300 group-hover:scale-110"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                  clip-rule="evenodd"
                />
              </svg>
              Iniciar sesión
            </button>
          </div>

          {/* Divider */}
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-white/10"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-dark-surface text-gray-500">O continúa con</span>
            </div>
          </div>

          {/* Login social */}
          <div class="flex justify-center">
            <button
              type="button"
              id="google-login-btn"
              class="group w-full max-w-sm flex justify-center items-center gap-3 py-3 px-6 bg-white/[0.04] backdrop-blur-sm text-white font-medium text-sm rounded-xl border border-white/10 hover:bg-white/[0.08] hover:border-white/25 hover:-translate-y-0.5 active:translate-y-0 shadow-sm hover:shadow-md transition-all duration-300"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
              <span class="text-sm font-medium">Continuar con Google</span>
            </button>
          </div>
        </form>

        {/* Enlace de vuelta */}
        <div class="text-center pt-4 border-t border-white/5">
          <a href="/" class="text-sm text-gray-500 hover:text-accent-gold transition-colors flex items-center justify-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver a la tienda
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    import '../../scripts/login-client.ts';
  </script>
</BaseLayout>

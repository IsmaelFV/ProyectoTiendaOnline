---
/**
 * Catch-all route for /hombre/{category-slug}
 * Redirects to /productos with the right filters
 */
const { slug } = Astro.params;
const segments = slug ? slug.split('/') : [];
const categorySlug = segments[segments.length - 1] || '';

const params = new URLSearchParams();
params.set('genero', 'hombre');
if (categorySlug) params.set('categoria', categorySlug);

return Astro.redirect(`/productos?${params.toString()}`, 302);

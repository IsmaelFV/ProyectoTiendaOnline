import AdminLayout from '@layouts/AdminLayout.astro';
import { verifyAdminFromCookies, createServerSupabaseClient } from '@lib/auth';

// Protecci√≥n: solo admins
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

const userId = await verifyAdminFromCookies(accessToken, refreshToken);
if (!userId) {
  return Astro.redirect('/auth/login');
}

// Usar service_role para consultas de admin (bypassa RLS)
const supabase = createServerSupabaseClient();

// Obtener estad√≠sticas principales
const [productsCount, ordersData, recentOrders, topProductsData] = await Promise.all([
  // Total productos
  supabase.from('products').select('*', { count: 'exact', head: true }),
  
  // Estad√≠sticas de pedidos
  supabase.from('orders').select('total, status, created_at, payment_status'),
  
  // √öltimos 5 pedidos
  supabase
    .from('orders')
    .select('id, order_number, total, status, created_at')
    .order('created_at', { ascending: false })
    .limit(5),
    
  // Productos m√°s vendidos
  supabase
    .from('order_items')
    .select('product_id, product_name, product_image, quantity')
]);

// Calcular estad√≠sticas
const totalProducts = productsCount.count || 0;
const orders = ordersData.data || [];

const totalOrders = orders.length;
const pendingOrders = orders.filter(o => o.status === 'pending' || o.status === 'confirmed').length;
const totalRevenue = orders
  .filter(o => o.status !== 'cancelled' && o.status !== 'refunded')
  .reduce((sum, order) => sum + parseFloat(order.total.toString()), 0);

// Ventas de este mes
const now = new Date();
const startOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
const thisMonthOrders = orders.filter(o => new Date(o.created_at) >= startOfMonth);
const thisMonthRevenue = thisMonthOrders.reduce((sum, order) => sum + parseFloat(order.total.toString()), 0);

// Producto m√°s vendido
const productSales: Record<string, { name: string; image: string; quantity: number }> = {};
(topProductsData.data || []).forEach((item: any) => {
  if (!productSales[item.product_id]) {
    productSales[item.product_id] = {
      name: item.product_name,
      image: item.product_image || '',
      quantity: 0
    };
  }
  productSales[item.product_id].quantity += item.quantity;
});

const topProduct = Object.entries(productSales)
  .sort((a, b) => b[1].quantity - a[1].quantity)[0];

// Datos para gr√°fico de √∫ltimos 7 d√≠as
const last7Days: string[] = [];
const salesByDay: number[] = [];
const ordersByDay: number[] = [];

for (let i = 6; i >= 0; i--) {
  const date = new Date();
  date.setDate(date.getDate() - i);
  const dateStr = date.toISOString().split('T')[0];
  const dayName = date.toLocaleDateString('es-ES', { weekday: 'short' });
  
  last7Days.push(dayName);
  
  const dayOrders = orders.filter(o => {
    const orderDate = new Date(o.created_at).toISOString().split('T')[0];
    return orderDate === dateStr && o.status !== 'cancelled';
  });
  
  salesByDay.push(dayOrders.reduce((sum, o) => sum + parseFloat(o.total.toString()), 0));
  ordersByDay.push(dayOrders.length);
}

const chartData = JSON.stringify({
  labels: last7Days,
  sales: salesByDay,
  orders: ordersByDay
});

// Formatear moneda
const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(amount);
};

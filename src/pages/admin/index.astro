import AdminLayout from '@layouts/AdminLayout.astro';
import { verifyAdminFromCookies, createServerSupabaseClient } from '@lib/auth';

// Protecci√≥n: solo admins
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

const userId = await verifyAdminFromCookies(accessToken, refreshToken);
if (!userId) {
  return Astro.redirect('/auth/login');
}

// Usar service_role para consultas de admin (bypassa RLS)
const supabase = createServerSupabaseClient();

// Obtener estad√≠sticas principales
let productsCount, ordersData, recentOrders, topProductsData;
let queryErrors: string[] = [];

try {
  [productsCount, ordersData, recentOrders, topProductsData] = await Promise.all([
    // Total productos
    supabase.from('products').select('*', { count: 'exact', head: true }),
    
    // Estad√≠sticas de pedidos (√∫ltimos 12 meses para no cargar todo)
    supabase.from('orders')
      .select('total, status, created_at, payment_status')
      .gte('created_at', new Date(new Date().setFullYear(new Date().getFullYear() - 1)).toISOString()),
    
    // √öltimos 10 pedidos
    supabase
      .from('orders')
      .select('id, order_number, total, status, payment_status, created_at, shipping_full_name')
      .order('created_at', { ascending: false })
      .limit(10),
      
    // Productos m√°s vendidos (top items con l√≠mite de seguridad)
    supabase
      .from('order_items')
      .select('product_id, product_name, product_image, quantity')
      .limit(5000)
  ]);

  // Registrar errores de cada query
  if (productsCount.error) queryErrors.push(`Productos: ${productsCount.error.message}`);
  if (ordersData.error) queryErrors.push(`Pedidos: ${ordersData.error.message}`);
  if (recentOrders.error) queryErrors.push(`Pedidos recientes: ${recentOrders.error.message}`);
  if (topProductsData.error) queryErrors.push(`Top productos: ${topProductsData.error.message}`);
} catch (err: any) {
  queryErrors.push(`Error general: ${err.message}`);
  // Inicializar con valores vac√≠os para que la p√°gina no crashee
  productsCount = { count: 0, error: null, data: null };
  ordersData = { data: [], error: null };
  recentOrders = { data: [], error: null };
  topProductsData = { data: [], error: null };
}

if (queryErrors.length > 0) {
  console.error('[Dashboard] Errores en queries:', queryErrors);
}

// Helper para parsear montos de forma segura
const safeParseFloat = (val: any): number => {
  const num = parseFloat(val?.toString() ?? '0');
  return isNaN(num) ? 0 : num;
};

// Calcular estad√≠sticas
const totalProducts = productsCount.count || 0;
const orders = ordersData.data || [];

const totalOrders = orders.length;
const pendingOrders = orders.filter(o => o.status === 'pending' || o.status === 'confirmed').length;
const totalRevenue = orders
  .filter(o => o.status !== 'cancelled' && o.status !== 'refunded')
  .reduce((sum, order) => sum + safeParseFloat(order.total), 0);

// Ventas de este mes
const now = new Date();
const startOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
const thisMonthOrders = orders.filter(o => new Date(o.created_at) >= startOfMonth && o.status !== 'cancelled' && o.status !== 'refunded');
const thisMonthRevenue = thisMonthOrders.reduce((sum, order) => sum + safeParseFloat(order.total), 0);

// Producto m√°s vendido
const productSales: Record<string, { name: string; image: string; quantity: number }> = {};
(topProductsData.data || []).forEach((item: any) => {
  if (!productSales[item.product_id]) {
    productSales[item.product_id] = {
      name: item.product_name,
      image: item.product_image || '',
      quantity: 0
    };
  }
  productSales[item.product_id].quantity += item.quantity;
});

const topProducts = Object.entries(productSales)
  .sort((a, b) => b[1].quantity - a[1].quantity)
  .slice(0, 5);

const topProduct = topProducts[0] || null;

// Distribuci√≥n de estados
const statusDistribution: Record<string, number> = {};
orders.forEach((o: any) => {
  statusDistribution[o.status] = (statusDistribution[o.status] || 0) + 1;
});

// Labels de estado en espa√±ol
const statusLabels: Record<string, { label: string; color: string; dotColor: string }> = {
  pending: { label: 'Pendiente', color: 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30', dotColor: 'bg-yellow-400' },
  confirmed: { label: 'Confirmado', color: 'bg-blue-500/20 text-blue-400 border border-blue-500/30', dotColor: 'bg-blue-400' },
  processing: { label: 'Procesando', color: 'bg-indigo-500/20 text-indigo-400 border border-indigo-500/30', dotColor: 'bg-indigo-400' },
  shipped: { label: 'Enviado', color: 'bg-purple-500/20 text-purple-400 border border-purple-500/30', dotColor: 'bg-purple-400' },
  delivered: { label: 'Entregado', color: 'bg-emerald-500/20 text-emerald-400 border border-emerald-500/30', dotColor: 'bg-emerald-400' },
  cancelled: { label: 'Cancelado', color: 'bg-red-500/20 text-red-400 border border-red-500/30', dotColor: 'bg-red-400' },
  refunded: { label: 'Reembolsado', color: 'bg-gray-500/20 text-gray-400 border border-gray-500/30', dotColor: 'bg-gray-400' },
};

// Datos para gr√°fico de √∫ltimos 7 d√≠as
const last7Days: string[] = [];
const salesByDay: number[] = [];
const ordersByDay: number[] = [];

for (let i = 6; i >= 0; i--) {
  const date = new Date();
  date.setDate(date.getDate() - i);
  const dateStr = date.toISOString().split('T')[0];
  const dayName = date.toLocaleDateString('es-ES', { weekday: 'short' });
  
  last7Days.push(dayName);
  
  const dayOrders = orders.filter(o => {
    const orderDate = new Date(o.created_at).toISOString().split('T')[0];
    return orderDate === dateStr && o.status !== 'cancelled' && o.status !== 'refunded';
  });
  
  salesByDay.push(dayOrders.reduce((sum, o) => sum + safeParseFloat(o.total), 0));
  ordersByDay.push(dayOrders.length);
}

const chartData = JSON.stringify({
  labels: last7Days,
  sales: salesByDay,
  orders: ordersByDay
});

// Formatear moneda
const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(amount);
};

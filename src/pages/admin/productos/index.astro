---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { verifyAdminFromCookies, createServerSupabaseClient } from '../../../lib/auth';

// Protección: solo admins
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

const userId = await verifyAdminFromCookies(accessToken, refreshToken);
if (!userId) {
  return Astro.redirect('/auth/login');
}

// Usar service_role para consultas de admin
const supabase = createServerSupabaseClient();

// Obtener productos con categoría y género
// Usar !category_id para desambiguar: hay FK directa (category_id) y tabla intermedia (product_categories)
const { data: products, error } = await supabase
  .from('products')
  .select('*, category:categories!category_id(id, name), genderRef:genders(id, name)')
  .order('created_at', { ascending: false });

// Función para formatear moneda
function formatCurrency(amount: number) {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(amount / 100);
}

// Función para formatear fecha
function formatDate(date: string) {
  return new Date(date).toLocaleDateString('es-ES', {
    day: '2-digit',
    month: 'short',
    year: 'numeric'
  });
}
---

<AdminLayout title="Gestión de Productos">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-white">Productos</h1>
        <p class="mt-1 text-sm text-gray-400">Gestiona el catálogo de productos de tu tienda</p>
      </div>
      <a
        href="/admin/productos/nuevo"
        class="bg-accent-gold text-dark-bg px-6 py-2.5 rounded-lg hover:bg-accent-gold/90 transition-colors flex items-center justify-center gap-2 font-medium shadow-lg shadow-accent-gold/10"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        <span>Nuevo Producto</span>
      </a>
    </div>

    <!-- Estadísticas -->
    {products && products.length > 0 && (
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-dark-surface rounded-xl border border-white/10 p-5">
          <div class="flex items-center gap-3">
            <div class="p-2 rounded-lg bg-blue-500/10">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>
            </div>
            <div>
              <div class="text-xs text-gray-400">Total productos</div>
              <div class="text-xl font-bold text-white">{products.length}</div>
            </div>
          </div>
        </div>
        <div class="bg-dark-surface rounded-xl border border-white/10 p-5">
          <div class="flex items-center gap-3">
            <div class="p-2 rounded-lg bg-emerald-500/10">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
            </div>
            <div>
              <div class="text-xs text-gray-400">En stock</div>
              <div class="text-xl font-bold text-emerald-400">{products.filter(p => p.stock > 0).length}</div>
            </div>
          </div>
        </div>
        <div class="bg-dark-surface rounded-xl border border-white/10 p-5">
          <div class="flex items-center gap-3">
            <div class="p-2 rounded-lg bg-red-500/10">
              <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
            </div>
            <div>
              <div class="text-xs text-gray-400">Sin stock</div>
              <div class="text-xl font-bold text-red-400">{products.filter(p => p.stock === 0).length}</div>
            </div>
          </div>
        </div>
        <div class="bg-dark-surface rounded-xl border border-white/10 p-5">
          <div class="flex items-center gap-3">
            <div class="p-2 rounded-lg bg-accent-gold/10">
              <svg class="w-5 h-5 text-accent-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <div>
              <div class="text-xs text-gray-400">Valor inventario</div>
              <div class="text-xl font-bold text-accent-gold">{formatCurrency(products.reduce((sum, p) => sum + (p.price * p.stock), 0))}</div>
            </div>
          </div>
        </div>
      </div>
    )}

    <!-- Tabla de productos -->
    <div class="bg-dark-surface rounded-xl border border-white/10 overflow-hidden">
      {error ? (
        <div class="p-6 text-center text-red-400">
          Error al cargar los productos: {error.message}
        </div>
      ) : !products || products.length === 0 ? (
        <div class="p-12 text-center text-gray-400">
          <svg class="mx-auto h-12 w-12 text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <p class="text-lg font-medium text-white">No hay productos</p>
          <p class="text-sm mt-1">Comienza agregando tu primer producto.</p>
          <a
            href="/admin/productos/nuevo"
            class="mt-4 inline-flex items-center px-4 py-2 bg-accent-gold text-dark-bg rounded-lg hover:bg-accent-gold/90 font-medium"
          >
            Crear Producto
          </a>
        </div>
      ) : (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-white/10">
            <thead class="bg-dark-card/50">
              <tr>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Producto
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Precio
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Stock
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Categoría
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Género
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider hidden md:table-cell">
                  Fecha
                </th>
                <th scope="col" class="px-6 py-3.5 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
              {products.map((product) => {
                const categoryName = (product as any).category?.name || '—';
                const genderName = (product as any).genderRef?.name || '—';
                return (
                <tr class="hover:bg-white/[0.03] transition-colors">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <img
                        src={product.images?.[0] || '/placeholder.svg'}
                        alt={product.name}
                        class="w-11 h-11 object-cover rounded-lg border border-white/10 flex-shrink-0"
                      />
                      <div class="ml-3 min-w-0">
                        <div class="text-sm font-medium text-white truncate max-w-[200px]">{product.name}</div>
                        <div class="text-[11px] text-gray-600 truncate max-w-[200px]">{product.slug}</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-accent-gold">{formatCurrency(product.price)}</div>
                    {product.is_on_sale && product.sale_price && (
                      <div class="text-[11px] text-red-400">Oferta: {formatCurrency(product.sale_price)}</div>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full ${
                      product.stock > 10 ? 'bg-emerald-500/20 text-emerald-400' :
                      product.stock > 0 ? 'bg-yellow-500/20 text-yellow-400' :
                      'bg-red-500/20 text-red-400'
                    }`}>
                      {product.stock} uds
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-sm text-gray-300">{categoryName}</span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`px-2 py-0.5 text-xs rounded-md font-medium ${
                      genderName.toLowerCase().includes('mujer') ? 'bg-pink-500/15 text-pink-400' :
                      genderName.toLowerCase().includes('hombre') ? 'bg-blue-500/15 text-blue-400' :
                      'bg-gray-500/15 text-gray-400'
                    }`}>
                      {genderName}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-xs text-gray-500 hidden md:table-cell">
                    {formatDate(product.created_at)}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex items-center justify-end gap-3">
                      <a
                        href={`/admin/productos/${product.id}/editar`}
                        class="text-blue-400 hover:text-blue-300 transition-colors"
                        title="Editar"
                      >
                        <svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                      </a>
                      <button
                        data-product-id={product.id}
                        data-product-name={product.name}
                        class="delete-btn text-red-400 hover:text-red-300 transition-colors"
                        title="Eliminar"
                      >
                        <svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                      </button>
                    </div>
                  </td>
                </tr>
              )})}
            </tbody>
          </table>
        </div>
      )}
    </div>
  </div>
</AdminLayout>

<script>
  import { customConfirm, customAlert } from '../../../lib/notifications';
  
  // Manejar eliminación de productos
  document.addEventListener('DOMContentLoaded', () => {
    const deleteButtons = document.querySelectorAll('.delete-btn');
    
    deleteButtons.forEach(button => {
      button.addEventListener('click', async (e) => {
        e.preventDefault();
        
        const productId = button.getAttribute('data-product-id');
        const productName = button.getAttribute('data-product-name');
        
        const confirmed = await customConfirm(
          `¿Estás seguro de que quieres eliminar "${productName}"?\n\nEsta acción no se puede deshacer.`,
          {
            title: 'Eliminar producto',
            confirmText: 'Sí, eliminar',
            cancelText: 'Cancelar',
            type: 'danger'
          }
        );
        
        if (!confirmed) {
          return;
        }
        
        (button as HTMLButtonElement).disabled = true;
        button.textContent = 'Eliminando...';
        
        try {
          const response = await fetch('/api/products/delete', {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ id: productId })
          });
          
          const result = await response.json();
          
          if (!response.ok) {
            throw new Error(result.error || 'Error al eliminar el producto');
          }
          
          // Recargar la página para ver los cambios
          window.location.reload();
          
        } catch (error) {
          customAlert((error as Error).message, 'error');
          (button as HTMLButtonElement).disabled = false;
          button.textContent = 'Eliminar';
        }
      });
    });
  });
</script>

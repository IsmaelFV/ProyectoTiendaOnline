<script>
  import { customConfirm, customAlert } from '../../../lib/notifications';

  // ========================================================================
  // Utilidades
  // ========================================================================
  function showToast(message: string, type: 'success' | 'error') {
    const toast = document.getElementById('toast')!;
    const inner = document.getElementById('toast-inner')!;
    const icon = document.getElementById('toast-icon')!;
    const msg = document.getElementById('toast-msg')!;

    if (type === 'success') {
      inner.className = 'flex items-center gap-3 px-5 py-3 rounded-xl shadow-2xl border bg-emerald-900/90 border-emerald-500/30';
      icon.innerHTML = '✓';
      icon.className = 'text-emerald-400 font-bold';
      msg.className = 'text-sm font-medium text-emerald-200';
    } else {
      inner.className = 'flex items-center gap-3 px-5 py-3 rounded-xl shadow-2xl border bg-red-900/90 border-red-500/30';
      icon.innerHTML = '✕';
      icon.className = 'text-red-400 font-bold';
      msg.className = 'text-sm font-medium text-red-200';
    }

    msg.textContent = message;
    toast.classList.remove('hidden', 'translate-x-full');
    toast.classList.add('translate-x-0');

    setTimeout(() => {
      toast.classList.add('translate-x-full');
      setTimeout(() => toast.classList.add('hidden'), 300);
    }, 3000);
  }

  async function patchProduct(productId: string, data: Record<string, any>): Promise<boolean> {
    try {
      const response = await fetch(`/api/products/${productId}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (!response.ok) {
        showToast(result.error || 'Error al actualizar', 'error');
        return false;
      }

      showToast('Producto actualizado', 'success');
      return true;
    } catch {
      showToast('Error de conexión', 'error');
      return false;
    }
  }

  // ========================================================================
  // Toggle switches (is_new, is_sustainable, is_active)
  // ========================================================================
  document.querySelectorAll('.toggle-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const productId = btn.getAttribute('data-product-id')!;
      const field = btn.getAttribute('data-field')!;
      const currentValue = btn.getAttribute('data-value') === 'true';
      const newValue = !currentValue;

      // Actualizar UI inmediatamente
      const track = btn.querySelector('div')! as HTMLDivElement;
      const knob = track.querySelector('div')! as HTMLDivElement;

      const colorMap: Record<string, string> = {
        is_new: 'bg-yellow-500',
        is_sustainable: 'bg-emerald-500',
        is_active: 'bg-blue-500'
      };

      if (newValue) {
        track.classList.remove('bg-gray-700');
        track.classList.add(colorMap[field]);
        knob.classList.remove('translate-x-0.5');
        knob.classList.add('translate-x-5');
      } else {
        track.classList.remove(colorMap[field]);
        track.classList.add('bg-gray-700');
        knob.classList.remove('translate-x-5');
        knob.classList.add('translate-x-0.5');
      }

      const success = await patchProduct(productId, { [field]: newValue });

      if (success) {
        btn.setAttribute('data-value', newValue.toString());

        // Si cambió visibilidad, actualizar opacidad de la fila
        if (field === 'is_active') {
          const row = btn.closest('tr');
          if (row) {
            if (newValue) {
              row.classList.remove('opacity-50', 'bg-white/[0.02]');
            } else {
              row.classList.add('opacity-50', 'bg-white/[0.02]');
            }
          }
        }
      } else {
        // Revertir UI si falló
        if (currentValue) {
          track.classList.remove('bg-gray-700');
          track.classList.add(colorMap[field]);
          knob.classList.remove('translate-x-0.5');
          knob.classList.add('translate-x-5');
        } else {
          track.classList.remove(colorMap[field]);
          track.classList.add('bg-gray-700');
          knob.classList.remove('translate-x-5');
          knob.classList.add('translate-x-0.5');
        }
      }
    });
  });

  // ========================================================================
  // Editar nombre (click para inline edit)
  // ========================================================================
  document.querySelectorAll('.editable-name').forEach(el => {
    el.addEventListener('click', () => {
      const productId = el.getAttribute('data-product-id')!;
      const currentValue = el.getAttribute('data-value')!;

      const input = document.createElement('input');
      input.type = 'text';
      input.value = currentValue;
      input.className = 'bg-dark-card border border-accent-gold/50 rounded px-2 py-0.5 text-sm text-white w-full max-w-[200px] focus:outline-none focus:ring-1 focus:ring-accent-gold';

      const originalHTML = el.innerHTML;
      el.innerHTML = '';
      el.appendChild(input);
      input.focus();
      input.select();

      const save = async () => {
        const newName = input.value.trim();
        if (!newName || newName === currentValue) {
          el.innerHTML = originalHTML;
          return;
        }

        el.innerHTML = '<span class="text-gray-400 text-xs">Guardando...</span>';
        const success = await patchProduct(productId, { name: newName });

        if (success) {
          el.textContent = newName;
          el.setAttribute('data-value', newName);
          const slugEl = el.parentElement?.querySelector('.text-gray-600');
          if (slugEl) {
            slugEl.textContent = newName
              .toLowerCase()
              .normalize('NFD')
              .replace(/[\u0300-\u036f]/g, '')
              .replace(/[^a-z0-9]+/g, '-')
              .replace(/^-|-$/g, '');
          }
        } else {
          el.innerHTML = originalHTML;
        }
      };

      input.addEventListener('blur', save);
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') { e.preventDefault(); input.blur(); }
        if (e.key === 'Escape') { el.innerHTML = originalHTML; }
      });
    });
  });

  // ========================================================================
  // Editar precio (click para inline edit)
  // ========================================================================
  document.querySelectorAll('.editable-price').forEach(el => {
    el.addEventListener('click', () => {
      const productId = el.getAttribute('data-product-id')!;
      const currentValue = el.getAttribute('data-value')!;

      const input = document.createElement('input');
      input.type = 'number';
      input.step = '0.01';
      input.min = '0';
      input.value = currentValue;
      input.className = 'bg-dark-card border border-accent-gold/50 rounded px-2 py-0.5 text-sm text-white w-24 focus:outline-none focus:ring-1 focus:ring-accent-gold';

      const originalHTML = el.innerHTML;
      el.innerHTML = '';
      el.appendChild(input);
      input.focus();
      input.select();

      const save = async () => {
        const newPrice = parseFloat(input.value);
        if (isNaN(newPrice) || newPrice < 0 || input.value === currentValue) {
          el.innerHTML = originalHTML;
          return;
        }

        el.innerHTML = '<span class="text-gray-400 text-xs">Guardando...</span>';
        const success = await patchProduct(productId, { price: newPrice });

        if (success) {
          const formatted = new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR' }).format(newPrice);
          el.textContent = formatted;
          el.setAttribute('data-value', newPrice.toFixed(2));
        } else {
          el.innerHTML = originalHTML;
        }
      };

      input.addEventListener('blur', save);
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') { e.preventDefault(); input.blur(); }
        if (e.key === 'Escape') { el.innerHTML = originalHTML; }
      });
    });
  });

  // ========================================================================
  // Editar color (modal selector)
  // ========================================================================
  const colorModal = document.getElementById('color-modal')!;
  const colorModalOverlay = document.getElementById('color-modal-overlay')!;
  const colorModalClose = document.getElementById('color-modal-close')!;
  const colorProductIdInput = document.getElementById('color-product-id') as HTMLInputElement;

  function closeColorModal() { colorModal.classList.add('hidden'); }
  colorModalOverlay.addEventListener('click', closeColorModal);
  colorModalClose.addEventListener('click', closeColorModal);

  document.querySelectorAll('.editable-color').forEach(el => {
    el.addEventListener('click', () => {
      const productId = el.getAttribute('data-product-id')!;
      const currentColor = el.getAttribute('data-value') || '';
      colorProductIdInput.value = productId;

      document.querySelectorAll('.color-option').forEach(opt => {
        const name = opt.getAttribute('data-color-name') || '';
        if (name === currentColor) {
          opt.classList.add('border-accent-gold', 'bg-white/10');
        } else {
          opt.classList.remove('border-accent-gold', 'bg-white/10');
        }
      });

      colorModal.classList.remove('hidden');
    });
  });

  document.querySelectorAll('.color-option').forEach(opt => {
    opt.addEventListener('click', async () => {
      const productId = colorProductIdInput.value;
      const colorName = opt.getAttribute('data-color-name') || '';
      const colorHex = opt.getAttribute('data-color-hex') || '';

      closeColorModal();
      const success = await patchProduct(productId, { color: colorName || null });

      if (success) {
        const colorCell = document.querySelector(`.editable-color[data-product-id="${productId}"]`);
        if (colorCell) {
          colorCell.setAttribute('data-value', colorName);
          if (colorName && colorHex) {
            colorCell.innerHTML = `<span class="w-5 h-5 rounded-full border border-white/20 flex-shrink-0" style="background-color: ${colorHex}"></span><span class="text-sm text-gray-300">${colorName}</span>`;
          } else if (colorName) {
            colorCell.innerHTML = `<span class="text-sm text-gray-300">${colorName}</span>`;
          } else {
            colorCell.innerHTML = `<span class="text-sm text-gray-600 italic">Sin color</span>`;
          }
        }
      }
    });
  });

  // ========================================================================
  // Modal de imágenes
  // ========================================================================
  const imagesModal = document.getElementById('images-modal')!;
  const imagesModalOverlay = document.getElementById('images-modal-overlay')!;
  const imagesModalClose = document.getElementById('images-modal-close')!;
  const imagesTextarea = document.getElementById('images-textarea') as HTMLTextAreaElement;
  const imagesProductId = document.getElementById('images-product-id') as HTMLInputElement;
  const imagesSave = document.getElementById('images-save')!;
  const imagesCancel = document.getElementById('images-cancel')!;

  function closeImagesModal() { imagesModal.classList.add('hidden'); }
  imagesModalOverlay.addEventListener('click', closeImagesModal);
  imagesModalClose.addEventListener('click', closeImagesModal);
  imagesCancel.addEventListener('click', closeImagesModal);

  document.querySelectorAll('[data-action="edit-images"]').forEach(el => {
    el.addEventListener('click', () => {
      const productId = el.getAttribute('data-product-id')!;
      const images = JSON.parse(el.getAttribute('data-images') || '[]');
      imagesProductId.value = productId;
      imagesTextarea.value = images.join('\n');
      imagesModal.classList.remove('hidden');
    });
  });

  imagesSave.addEventListener('click', async () => {
    const productId = imagesProductId.value;
    const images = imagesTextarea.value.split('\n').map(s => s.trim()).filter(Boolean);

    if (images.length === 0) {
      showToast('Debe haber al menos una imagen', 'error');
      return;
    }

    closeImagesModal();
    const success = await patchProduct(productId, { images });

    if (success) {
      const imgContainer = document.querySelector(`[data-action="edit-images"][data-product-id="${productId}"]`);
      if (imgContainer) {
        const img = imgContainer.querySelector('img');
        if (img) img.src = images[0];
        imgContainer.setAttribute('data-images', JSON.stringify(images));
      }
    }
  });

  // ========================================================================
  // Eliminar producto
  // ========================================================================
  document.querySelectorAll('.delete-btn').forEach(button => {
    button.addEventListener('click', async (e) => {
      e.preventDefault();

      const productId = button.getAttribute('data-product-id');
      const productName = button.getAttribute('data-product-name');

      const confirmed = await customConfirm(
        `¿Estás seguro de que quieres eliminar "${productName}"?\n\nEsta acción no se puede deshacer.`,
        {
          title: 'Eliminar producto',
          confirmText: 'Sí, eliminar',
          cancelText: 'Cancelar',
          type: 'danger'
        }
      );

      if (!confirmed) return;

      (button as HTMLButtonElement).disabled = true;

      try {
        const response = await fetch('/api/products/delete', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: productId })
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Error al eliminar el producto');
        }

        const row = button.closest('tr');
        if (row) {
          row.style.transition = 'opacity 0.3s, transform 0.3s';
          row.style.opacity = '0';
          row.style.transform = 'translateX(20px)';
          setTimeout(() => row.remove(), 300);
        }

        showToast('Producto eliminado correctamente', 'success');
      } catch (error) {
        showToast((error as Error).message, 'error');
        (button as HTMLButtonElement).disabled = false;
      }
    });
  });
</script>

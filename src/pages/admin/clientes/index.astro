---
import AdminLayout from '@layouts/AdminLayout.astro';
import { verifyAdminFromCookies, createServerSupabaseClient } from '@lib/auth';

// Protección: solo admins
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

const userId = await verifyAdminFromCookies(accessToken, refreshToken);
if (!userId) {
  return Astro.redirect('/auth/login');
}

// Usar service_role para consultas de admin
const supabase = createServerSupabaseClient();

// Obtener todos los pedidos con información del usuario
const { data: orders, error } = await supabase
  .from('orders')
  .select('user_id, shipping_full_name, total, status, created_at')
  .order('created_at', { ascending: false });

// Agrupar por usuario
const clientsMap = new Map();
if (orders) {
  orders.forEach((order) => {
    if (order.user_id) {
      if (!clientsMap.has(order.user_id)) {
        clientsMap.set(order.user_id, {
          id: order.user_id,
          name: order.shipping_full_name,
          orderCount: 0,
          totalSpent: 0,
          lastOrder: order.created_at
        });
      }
      const client = clientsMap.get(order.user_id);
      if (order.status !== 'cancelled' && order.status !== 'refunded') {
        client.orderCount += 1;
        client.totalSpent += parseFloat(order.total?.toString() ?? '0') || 0;
      }
    }
  });
}

const clients = Array.from(clientsMap.values()).sort((a, b) => 
  new Date(b.lastOrder).getTime() - new Date(a.lastOrder).getTime()
);

// Función para formatear fecha
function formatDate(date: string) {
  return new Date(date).toLocaleDateString('es-ES', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
  });
}

// Función para formatear moneda
function formatCurrency(amount: number) {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(amount);
}
---

<AdminLayout title="Gestión de Clientes">
  <div class="space-y-8">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-white">Clientes</h1>
        <p class="mt-1 text-sm text-gray-400">Usuarios que han realizado pedidos en tu tienda</p>
      </div>
      {clients && clients.length > 0 && (
        <div class="text-sm text-gray-500 bg-dark-surface border border-white/10 rounded-lg px-4 py-2">
          <span class="text-white font-medium">{clients.length}</span> clientes registrados
        </div>
      )}
    </div>

    <!-- Estadísticas -->
    {clients && clients.length > 0 && (
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-dark-surface rounded-xl border border-white/10 p-5">
          <div class="flex items-center gap-3">
            <div class="p-2.5 rounded-lg bg-blue-500/10">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
            </div>
            <div>
              <div class="text-xs text-gray-400">Total clientes</div>
              <div class="text-2xl font-bold text-white">{clients.length}</div>
            </div>
          </div>
        </div>
        <div class="bg-dark-surface rounded-xl border border-white/10 p-5">
          <div class="flex items-center gap-3">
            <div class="p-2.5 rounded-lg bg-accent-gold/10">
              <svg class="w-5 h-5 text-accent-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" /></svg>
            </div>
            <div>
              <div class="text-xs text-gray-400">Total pedidos</div>
              <div class="text-2xl font-bold text-accent-gold">
                {clients.reduce((sum, c) => sum + c.orderCount, 0)}
              </div>
            </div>
          </div>
        </div>
        <div class="bg-dark-surface rounded-xl border border-white/10 p-5">
          <div class="flex items-center gap-3">
            <div class="p-2.5 rounded-lg bg-emerald-500/10">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <div>
              <div class="text-xs text-gray-400">Ingresos totales</div>
              <div class="text-2xl font-bold text-emerald-400">
                {formatCurrency(clients.reduce((sum, c) => sum + c.totalSpent, 0))}
              </div>
            </div>
          </div>
        </div>
      </div>
    )}

    <!-- Tabla de clientes -->
    <div class="bg-dark-surface rounded-xl border border-white/10 overflow-hidden">
      {!clients || clients.length === 0 ? (
        <div class="p-12 text-center text-gray-400">
          <svg class="mx-auto h-12 w-12 text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <p class="text-lg font-medium text-white">No hay clientes</p>
          <p class="text-sm mt-1">Los clientes con pedidos aparecerán aquí.</p>
        </div>
      ) : (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-white/10">
            <thead class="bg-dark-card/50">
              <tr>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Cliente
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Pedidos
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Total Gastado
                </th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Último Pedido
                </th>
                <th scope="col" class="px-6 py-3.5 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
              {clients.map((client) => (
                <tr class="hover:bg-white/[0.03] transition-colors">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-9 h-9 rounded-full bg-accent-gold/10 border border-accent-gold/20 flex items-center justify-center flex-shrink-0">
                        <span class="text-sm font-bold text-accent-gold">
                          {client.name ? client.name.charAt(0).toUpperCase() : '?'}
                        </span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-white">{client.name || 'Sin nombre'}</div>
                        <div class="text-[11px] text-gray-600 font-mono">{client.id.slice(0, 8)}…</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`px-2.5 py-0.5 inline-flex text-xs font-semibold rounded-full ${
                      client.orderCount >= 5 ? 'bg-accent-gold/20 text-accent-gold' :
                      client.orderCount >= 2 ? 'bg-blue-500/20 text-blue-400' :
                      'bg-gray-500/20 text-gray-400'
                    }`}>
                      {client.orderCount} {client.orderCount === 1 ? 'pedido' : 'pedidos'}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-emerald-400">
                    {formatCurrency(client.totalSpent)}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {formatDate(client.lastOrder)}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a
                      href={`/admin/pedidos?search=${encodeURIComponent(client.name)}`}
                      class="inline-flex items-center gap-1.5 text-accent-gold hover:text-accent-gold/80 transition-colors"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                      Ver pedidos
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>
  </div>
</AdminLayout>

---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { supabase } from '../../../lib/supabase';

// Protección: solo admins
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) {
  return Astro.redirect('/admin/login');
}

// Verificar si es admin
const { data: { user } } = await supabase.auth.getUser(accessToken);
if (!user) {
  return Astro.redirect('/admin/login');
}

const { data: adminUser } = await supabase
  .from('admin_users')
  .select('*')
  .eq('user_id', user.id);

if (!adminUser || adminUser.length === 0) {
  return Astro.redirect('/admin/login');
}

// Obtener devoluciones
const { data: returns, error } = await supabase
  .from('returns')
  .select(`
    *,
    orders (
      order_number,
      user_id,
      shipping_full_name
    )
  `)
  .order('created_at', { ascending: false });

// Función para formatear moneda
function formatCurrency(amount: number) {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(amount);
}

// Función para formatear fecha
function formatDate(date: string) {
  return new Date(date).toLocaleDateString('es-ES', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
  });
}

// Función para obtener el color del estado
function getStatusColor(status: string) {
  const colors: { [key: string]: string } = {
    pending: 'bg-yellow-100 text-yellow-800',
    approved: 'bg-blue-100 text-blue-800',
    rejected: 'bg-red-100 text-red-800',
    received: 'bg-purple-100 text-purple-800',
    refunded: 'bg-green-100 text-green-800',
    cancelled: 'bg-gray-100 text-gray-800'
  };
  return colors[status] || 'bg-gray-100 text-gray-800';
}

// Función para traducir estados
function translateStatus(status: string) {
  const translations: { [key: string]: string } = {
    pending: 'Pendiente',
    approved: 'Aprobada',
    rejected: 'Rechazada',
    received: 'Recibida',
    refunded: 'Reembolsada',
    cancelled: 'Cancelada'
  };
  return translations[status] || status;
}

// Función para traducir razones
function translateReason(reason: string) {
  const translations: { [key: string]: string } = {
    defective: 'Producto defectuoso',
    wrong_item: 'Producto incorrecto',
    wrong_size: 'Talla incorrecta',
    not_as_described: 'No es como se describía',
    changed_mind: 'Cambio de opinión',
    other: 'Otro'
  };
  return translations[reason] || reason;
}
---

<AdminLayout title="Gestión de Devoluciones">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Devoluciones</h1>
        <p class="mt-1 text-sm text-gray-600">Gestiona las solicitudes de devolución</p>
      </div>
    </div>

    <!-- Tabla de devoluciones -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      {error ? (
        <div class="p-6 text-center text-red-600">
          Error al cargar las devoluciones: {error.message}
        </div>
      ) : !returns || returns.length === 0 ? (
        <div class="p-12 text-center text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
          </svg>
          <p class="text-lg font-medium">No hay devoluciones</p>
          <p class="text-sm mt-1">Las solicitudes de devolución aparecerán aquí.</p>
        </div>
      ) : (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Nº Devolución
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Pedido
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Cliente
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Razón
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Monto
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Fecha
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Estado
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {returns.map((ret) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">{ret.return_number}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {ret.orders?.order_number || 'N/A'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {ret.orders?.shipping_full_name || 'Cliente'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {translateReason(ret.reason)}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">{formatCurrency(ret.refund_amount)}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {formatDate(ret.created_at)}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${getStatusColor(ret.status)}`}>
                      {translateStatus(ret.status)}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a
                      href={`/admin/devoluciones/${ret.id}`}
                      class="text-brand-gold hover:text-yellow-600 transition-colors"
                    >
                      Ver detalles
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>

    <!-- Estadísticas rápidas -->
    {returns && returns.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-600">Total devoluciones</div>
          <div class="text-2xl font-bold text-gray-900">{returns.length}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-600">Pendientes</div>
          <div class="text-2xl font-bold text-yellow-600">
            {returns.filter(r => r.status === 'pending').length}
          </div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-600">Aprobadas</div>
          <div class="text-2xl font-bold text-blue-600">
            {returns.filter(r => r.status === 'approved').length}
          </div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
          <div class="text-sm text-gray-600">Reembolsadas</div>
          <div class="text-2xl font-bold text-green-600">
            {returns.filter(r => r.status === 'refunded').length}
          </div>
        </div>
      </div>
    )}
  </div>
</AdminLayout>

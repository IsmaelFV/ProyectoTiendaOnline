---
/**
 * ============================================================================
 * Página: Categoría por Género
 * ============================================================================
 * Rutas dinámicas:
 * - /mujer/[category]
 * - /hombre/[category]
 * Ejemplo: /mujer/ropa-mujer, /hombre/camisetas-hombre
 * ============================================================================
 */

import PublicLayout from '../../../layouts/PublicLayout.astro';
import CategoryNav from '../../../components/navigation/CategoryNav';
import ProductCard from '../../../components/product/ProductCard.astro';
import { supabase } from '../../../lib/supabase';
import type { Product, Category } from '../../../lib/supabase';

const { gender, category: categorySlug } = Astro.params;

if (!gender || !['mujer', 'hombre'].includes(gender)) {
  return Astro.redirect('/404');
}

// Obtener género
const { data: genderData } = await supabase
  .from('genders')
  .select('id, name, slug')
  .eq('slug', gender)
  .single();

if (!genderData) {
  return Astro.redirect('/404');
}

// Obtener categoría
const { data: categoryData } = await supabase
  .from('categories')
  .select(`
    *,
    parent:parent_id(name, slug)
  `)
  .eq('slug', categorySlug)
  .eq('gender_id', genderData.id)
  .single();

if (!categoryData) {
  return Astro.redirect('/404');
}

const category = categoryData as Category;

// Si es una categoría con hijos, obtener también las subcategorías
let subcategories: Category[] = [];
if (category.level === 1) {
  const { data } = await supabase
    .from('categories')
    .select('*')
    .eq('parent_id', category.id)
    .order('display_order');
  
  subcategories = (data || []) as Category[];
}

// Detectar si es página de Rebajas o Novedades
const isRebajas = categorySlug?.includes('rebajas');
const isNovedades = categorySlug?.includes('novedades');

// Obtener productos según el tipo de categoría
let productsArray: Product[] = [];

if (isRebajas) {
  // Para rebajas: filtrar por is_on_sale = true
  const { data: products } = await supabase
    .from('products')
    .select(`
      *,
      category:categories!products_category_id_fkey(name, slug)
    `)
    .eq('gender_id', genderData.id)
    .eq('is_on_sale', true)
    .order('sale_price', { ascending: true })
    .order('created_at', { ascending: false })
    .limit(48);
  
  productsArray = (products || []) as Product[];
} else if (isNovedades) {
  // Para novedades: filtrar por is_new = true o productos recientes
  const { data: products } = await supabase
    .from('products')
    .select(`
      *,
      category:categories!products_category_id_fkey(name, slug)
    `)
    .eq('gender_id', genderData.id)
    .eq('is_new', true)
    .order('created_at', { ascending: false })
    .limit(48);
  
  productsArray = (products || []) as Product[];
} else {
  // Para otras categorías: filtrar por category_id
  let categoryIds = [category.id];
  if (subcategories.length > 0) {
    categoryIds = [...categoryIds, ...subcategories.map(sub => sub.id)];
  }

  const { data: products } = await supabase
    .from('products')
    .select(`
      *,
      category:categories!products_category_id_fkey(name, slug)
    `)
    .in('category_id', categoryIds)
    .eq('gender_id', genderData.id)
    .order('featured', { ascending: false })
    .order('created_at', { ascending: false })
    .limit(48);

  productsArray = (products || []) as Product[];
}

// Breadcrumbs
const breadcrumbs = [
  { name: genderData.name, href: `/${gender}` },
  { name: category.name, href: `/${gender}/${categorySlug}` }
];

// IDs de categorías para paginación (incluye subcategorías)
let categoryIdsForPagination: string[] = [];
if (!isRebajas && !isNovedades) {
  categoryIdsForPagination = [category.id];
  if (subcategories.length > 0) {
    categoryIdsForPagination = [...categoryIdsForPagination, ...subcategories.map(sub => sub.id)];
  }
}

---


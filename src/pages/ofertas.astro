---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import { supabase } from '@lib/supabase';

// Obtener productos en oferta (is_on_sale = true)
const { data: saleProducts } = await supabase
  .from('products')
  .select('*, category:categories!products_category_id_fkey(name, slug), gender:genders(name)')
  .eq('is_on_sale', true)
  .order('sale_price', { ascending: true })
  .limit(24);

// Separar por g√©nero
const womenProducts = saleProducts?.filter(p => p.gender?.name?.toLowerCase().includes('mujer')) || [];
const menProducts = saleProducts?.filter(p => p.gender?.name?.toLowerCase().includes('hombre')) || [];
---

<PublicLayout title="Rebajas - FashionMarket">
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Hero con estilo de rebajas */}
    <div class="bg-gradient-to-r from-red-600 to-pink-600 text-white rounded-2xl p-12 mb-12 text-center">
      <div class="inline-block bg-white text-red-600 px-4 py-1 rounded-full text-sm font-bold mb-4">
        HASTA -70%
      </div>
      <h1 class="font-serif text-4xl md:text-6xl font-bold mb-4 tracking-tight">
        Rebajas de Temporada
      </h1>
      <p class="text-lg text-white/90 max-w-2xl mx-auto">
        Aprovecha descuentos incre√≠bles en una selecci√≥n de nuestros mejores productos. Stock limitado.
      </p>
    </div>

    {/* Tabs de g√©nero */}
    <div class="flex justify-center mb-8">
      <div class="inline-flex rounded-lg border border-gray-200 p-1">
        <button 
          data-tab="mujer" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-md transition-colors active"
        >
          MUJER ({womenProducts.length})
        </button>
        <button 
          data-tab="hombre" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-md transition-colors"
        >
          HOMBRE ({menProducts.length})
        </button>
      </div>
    </div>

    {/* Banner de informaci√≥n */}
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-8 text-center">
      <p class="text-red-800 font-medium">
        üî• <strong>√öltimas unidades disponibles</strong> - No te pierdas estas ofertas exclusivas
      </p>
    </div>

    {/* Productos de Mujer */}
    <div id="mujer-products" class="tab-content">
      {womenProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {womenProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-semibold text-gray-600 mb-2">Sin ofertas disponibles</h3>
          <p class="text-gray-500 mb-4">No hay productos de mujer en rebaja en este momento</p>
          <a href="/mujer" class="text-brand-navy hover:underline">Ver toda la colecci√≥n de mujer ‚Üí</a>
        </div>
      )}
    </div>

    {/* Productos de Hombre */}
    <div id="hombre-products" class="tab-content hidden">
      {menProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {menProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-semibold text-gray-600 mb-2">Sin ofertas disponibles</h3>
          <p class="text-gray-500 mb-4">No hay productos de hombre en rebaja en este momento</p>
          <a href="/hombre" class="text-brand-navy hover:underline">Ver toda la colecci√≥n de hombre ‚Üí</a>
        </div>
      )}
    </div>
  </div>
</PublicLayout>

<style>
  .tab-btn {
    color: #666;
  }
  .tab-btn.active {
    background-color: #dc2626;
    color: white;
  }
  .tab-btn:not(.active):hover {
    background-color: #fee2e2;
    color: #dc2626;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab');
        
        // Actualizar botones
        tabBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Actualizar contenido
        tabContents.forEach(content => {
          if (content.id === `${tab}-products`) {
            content.classList.remove('hidden');
          } else {
            content.classList.add('hidden');
          }
        });
      });
    });
  });
</script>

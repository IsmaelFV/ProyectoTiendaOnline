---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import { supabase } from '@lib/supabase';

// Obtener productos en oferta (is_on_sale = true)
const { data: saleProducts } = await supabase
  .from('products')
  .select('*, category:categories!products_category_id_fkey(name, slug), gender:genders(name)')
  .eq('is_on_sale', true)
  .order('sale_price', { ascending: true })
  .limit(24);

// Separar por género
const womenProducts = saleProducts?.filter(p => p.gender?.name?.toLowerCase().includes('mujer')) || [];
const menProducts = saleProducts?.filter(p => p.gender?.name?.toLowerCase().includes('hombre')) || [];
---

<PublicLayout title="Rebajas - FashionMarket">
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Hero elegante con estilo premium */}
    <section class="relative bg-dark-surface border border-white/10 rounded-2xl overflow-hidden mb-12">
      {/* Patrón de fondo sutil */}
      <div class="absolute inset-0 opacity-[0.02]">
        <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')]"></div>
      </div>
      
      {/* Acento dorado sutil en la parte superior */}
      <div class="absolute top-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-accent-gold/30 to-transparent"></div>
      
      <div class="relative py-16 px-6 text-center">
        <div class="flex items-center justify-center gap-3 mb-4">
          <h1 class="text-4xl md:text-6xl font-light text-white uppercase tracking-wider">
            Rebajas de Temporada
          </h1>
          {/* Badge elegante de descuento */}
          <div class="hidden md:flex items-center gap-2 px-4 py-1.5 bg-white/5 border border-accent-gold/20 rounded-lg backdrop-blur-sm">
            <span class="text-accent-gold text-sm font-semibold tracking-wide">HASTA -70%</span>
          </div>
        </div>
        
        <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed mb-6">
          Selección especial con descuentos exclusivos en prendas de alta calidad. Stock limitado.
        </p>
        
        {/* Badge móvil */}
        <div class="flex md:hidden items-center justify-center gap-2 px-4 py-1.5 bg-white/5 border border-accent-gold/20 rounded-lg backdrop-blur-sm w-fit mx-auto">
          <span class="text-accent-gold text-sm font-semibold tracking-wide">HASTA -70%</span>
        </div>
      </div>
    </section>

    {/* Tabs de género con estilo dorado */}
    <div class="flex justify-center mb-8">
      <div class="inline-flex rounded-xl bg-dark-surface border border-white/10 p-1">
        <button 
          data-tab="mujer" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-lg transition-colors active"
        >
          MUJER ({womenProducts.length})
        </button>
        <button 
          data-tab="hombre" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-lg transition-colors"
        >
          HOMBRE ({menProducts.length})
        </button>
      </div>
    </div>

    {/* Productos de Mujer */}
    <div id="mujer-products" class="tab-content">
      {womenProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {womenProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">Sin ofertas disponibles</h3>
          <p class="text-gray-400 mb-4">No hay productos de mujer en rebaja en este momento</p>
          <a href="/mujer" class="text-accent-gold hover:text-accent-gold/80 transition-colors">Ver toda la colección de mujer →</a>
        </div>
      )}
    </div>

    {/* Productos de Hombre */}
    <div id="hombre-products" class="tab-content hidden">
      {menProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {menProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">Sin ofertas disponibles</h3>
          <p class="text-gray-400 mb-4">No hay productos de hombre en rebaja en este momento</p>
          <a href="/hombre" class="text-accent-gold hover:text-accent-gold/80 transition-colors">Ver toda la colección de hombre →</a>
        </div>
      )}
    </div>
  </div>
</PublicLayout>

<style>
  .tab-btn {
    color: #9ca3af;
  }
  .tab-btn.active {
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.15) 0%, rgba(212, 175, 55, 0.05) 100%);
    border: 1px solid rgba(212, 175, 55, 0.3);
    color: #d4af37;
  }
  .tab-btn:not(.active):hover {
    background-color: rgba(255, 255, 255, 0.05);
    color: #d4af37;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab');
        
        // Actualizar botones
        tabBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Actualizar contenido
        tabContents.forEach(content => {
          if (content.id === `${tab}-products`) {
            content.classList.remove('hidden');
          } else {
            content.classList.add('hidden');
          }
        });
      });
    });
  });
</script>

---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import Button from '@components/ui/Button.astro';
import { supabase } from '@lib/supabase';

const { data: featuredProducts, error } = await supabase
  .from('products')
  .select('*')
  .eq('featured', true)
  .limit(8);
---

<PublicLayout>
  <main class="w-full">

    <!-- ===== HERO ===== -->
    <section class="hero">
      <div class="hero-bg"></div>
      <div class="hero-inner">
        <span class="hero-tag">Nueva Colección Primavera 2026</span>
        <h1 class="hero-heading">
          <span class="hero-line-1">Elegancia</span>
          <span class="hero-line-2">Atemporal</span>
        </h1>
        <p class="hero-desc">
          Descubre nuestra colección exclusiva de moda premium.<br class="hidden sm:block" />
          Diseños que combinan sofisticación y comodidad.
        </p>
        <div class="hero-actions">
          <a href="/mujer" class="hero-btn-gold">
            Explorar Mujer
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
          <a href="/hombre" class="hero-btn-outline">Ver Hombre</a>
        </div>
      </div>
    </section>

    <!-- ===== CATEGORÍAS RÁPIDAS ===== -->
    <section class="py-10 lg:py-14">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
          <a href="/novedades" class="cat-card group">
            <div class="cat-icon">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
              </svg>
            </div>
            <span class="cat-label">Novedades</span>
            <span class="cat-arrow">→</span>
          </a>
          <a href="/ofertas" class="cat-card cat-card-sale group">
            <div class="cat-icon cat-icon-sale">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
              </svg>
            </div>
            <span class="cat-label">Rebajas</span>
            <span class="cat-arrow">→</span>
          </a>
          <a href="/mujer" class="cat-card group">
            <div class="cat-icon">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
              </svg>
            </div>
            <span class="cat-label">Mujer</span>
            <span class="cat-arrow">→</span>
          </a>
          <a href="/hombre" class="cat-card group">
            <div class="cat-icon">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
              </svg>
            </div>
            <span class="cat-label">Hombre</span>
            <span class="cat-arrow">→</span>
          </a>
        </div>
      </div>
    </section>

    <!-- ===== PRODUCTOS DESTACADOS ===== -->
    <section class="pb-14 lg:pb-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="flex items-end justify-between mb-8">
          <div>
            <span class="text-[11px] font-semibold tracking-[0.2em] uppercase text-gold-500 block mb-1">Selección curada</span>
            <h2 class="text-2xl sm:text-3xl font-serif font-bold text-white">Productos Destacados</h2>
          </div>
          <a href="/productos" class="hidden sm:inline-flex items-center gap-1.5 text-sm text-gray-400 hover:text-gold-500 transition-colors">
            Ver todos
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>

        {featuredProducts && featuredProducts.length > 0 ? (
          <div class="product-grid">
            {featuredProducts.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <p class="text-center text-gray-500 py-12">No hay productos destacados disponibles.</p>
        )}

        <div class="text-center mt-10 sm:hidden">
          <a href="/productos" class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-gold-500 transition-colors">
            Ver todos los productos →
          </a>
        </div>
      </div>
    </section>

    <!-- ===== BENEFICIOS ===== -->
    <section class="border-t border-white/5 py-10 lg:py-14">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6">
          <div class="benefit">
            <div class="benefit-icon">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-white">Calidad Premium</p>
              <p class="text-xs text-gray-500 mt-0.5">Materiales seleccionados</p>
            </div>
          </div>

          <div class="benefit">
            <div class="benefit-icon">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-white">Envío Gratis</p>
              <p class="text-xs text-gray-500 mt-0.5">Pedidos +50€</p>
            </div>
          </div>

          <div class="benefit">
            <div class="benefit-icon">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-white">Devoluciones</p>
              <p class="text-xs text-gray-500 mt-0.5">30 días gratis</p>
            </div>
          </div>

          <div class="benefit">
            <div class="benefit-icon">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-white">Pago Seguro</p>
              <p class="text-xs text-gray-500 mt-0.5">Stripe certificado</p>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
</PublicLayout>

<style>
  /* ===== HERO ===== */
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    max-height: 600px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse at 30% 20%, rgba(212, 175, 55, 0.06) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 80%, rgba(16, 185, 129, 0.04) 0%, transparent 50%),
      linear-gradient(180deg, rgba(10, 10, 10, 0.3) 0%, rgba(10, 10, 10, 1) 100%);
  }

  .hero-inner {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 3rem 1.5rem;
    max-width: 40rem;
    margin: 0 auto;
  }

  .hero-tag {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 16px;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #d4af37;
    background: rgba(212, 175, 55, 0.08);
    border: 1px solid rgba(212, 175, 55, 0.15);
    border-radius: 100px;
    margin-bottom: 1.5rem;
  }

  .hero-heading {
    font-family: 'Georgia', serif;
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1.25rem;
  }

  .hero-line-1 {
    display: block;
    color: #ffffff;
  }

  .hero-line-2 {
    display: block;
    background: linear-gradient(135deg, #d4af37 0%, #f0d878 50%, #d4af37 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .hero-desc {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: #737373;
    margin-bottom: 2rem;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .hero-btn-gold {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0.75rem 1.75rem;
    font-size: 13px;
    font-weight: 600;
    color: #0a0a0a;
    background: linear-gradient(135deg, #d4af37, #e8c96d);
    border-radius: 10px;
    transition: all 0.3s ease;
    box-shadow: 0 0 24px rgba(212, 175, 55, 0.2);
  }

  .hero-btn-gold:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(212, 175, 55, 0.35);
  }

  .hero-btn-outline {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0.75rem 1.75rem;
    font-size: 13px;
    font-weight: 600;
    color: #e5e5e5;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .hero-btn-outline:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(212, 175, 55, 0.3);
    transform: translateY(-2px);
  }

  /* ===== CATEGORÍAS ===== */
  .cat-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    transition: all 0.25s ease;
  }

  .cat-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(212, 175, 55, 0.2);
    transform: translateY(-2px);
  }

  .cat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: rgba(212, 175, 55, 0.08);
    color: #d4af37;
    flex-shrink: 0;
    transition: background 0.25s ease;
  }

  .cat-card:hover .cat-icon {
    background: rgba(212, 175, 55, 0.15);
  }

  .cat-icon-sale {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }

  .cat-card-sale:hover .cat-icon-sale {
    background: rgba(239, 68, 68, 0.18);
  }

  .cat-label {
    font-size: 13px;
    font-weight: 500;
    color: #e5e5e5;
    flex: 1;
  }

  .cat-arrow {
    font-size: 14px;
    color: #525252;
    transition: all 0.25s ease;
  }

  .cat-card:hover .cat-arrow {
    color: #d4af37;
    transform: translateX(3px);
  }

  /* ===== PRODUCTS GRID ===== */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  @media (min-width: 640px) {
    .product-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }
  }

  @media (min-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 18px;
    }
  }

  /* ===== BENEFICIOS ===== */
  .benefit {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
  }

  .benefit-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(212, 175, 55, 0.08);
    color: #d4af37;
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .hero {
      min-height: 60vh;
    }

    .hero-actions {
      flex-direction: column;
    }

    .hero-btn-gold,
    .hero-btn-outline {
      width: 100%;
      justify-content: center;
    }

    .benefit {
      flex-direction: column;
      text-align: center;
      gap: 8px;
      padding: 14px 10px;
    }
  }
</style>

---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import { supabase } from '@lib/supabase';

// Obtener productos sostenibles
const { data: sustainableProducts } = await supabase
  .from('products')
  .select('*, category:categories!products_category_id_fkey(name, slug)')
  .eq('is_sustainable', true)
  .eq('is_active', true)
  .limit(12);
---

<PublicLayout title="Sostenibilidad - Fashion Store">
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Hero */}
    <div class="text-center mb-16">
      <div class="inline-block bg-green-100 text-green-800 px-4 py-1 rounded-full text-sm font-bold mb-4">
        COMPROMISO VERDE
      </div>
      <h1 class="font-serif text-4xl md:text-6xl font-bold text-brand-navy mb-6 tracking-tight">
        Moda Sostenible
      </h1>
      <p class="text-lg text-brand-slate max-w-3xl mx-auto">
        Creemos en una moda más consciente. Descubre nuestra colección de productos fabricados
        con materiales reciclados, orgánicos y de comercio justo.
      </p>
    </div>

    {/* Valores */}
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-brand-navy mb-2">Materiales Reciclados</h3>
        <p class="text-brand-slate">
          Utilizamos fibras recicladas y damos nueva vida a materiales existentes.
        </p>
      </div>

      <div class="text-center p-6">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-brand-navy mb-2">Comercio Justo</h3>
        <p class="text-brand-slate">
          Trabajamos con proveedores certificados que garantizan condiciones laborales justas.
        </p>
      </div>

      <div class="text-center p-6">
        <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-brand-navy mb-2">Producción Local</h3>
        <p class="text-brand-slate">
          Priorizamos fabricantes locales para reducir nuestra huella de carbono.
        </p>
      </div>
    </div>

    {/* Certificaciones */}
    <div class="bg-gradient-to-br from-gray-900 to-gray-850 rounded-2xl p-8 mb-16 border border-white/10 shadow-elevated">
      <h2 class="text-2xl font-bold text-white text-center mb-8">Nuestras Certificaciones</h2>
      <div class="flex flex-wrap justify-center gap-12 items-center">
        <div class="text-center group">
          <div class="w-24 h-24 bg-gradient-to-br from-gray-800 to-gray-850 rounded-2xl flex items-center justify-center mx-auto mb-3 shadow-lg border border-white/10 group-hover:border-green-500/30 transition-all duration-300 group-hover:shadow-glow group-hover:scale-105">
            <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" /></svg>
          </div>
          <p class="text-sm font-semibold text-gray-200 mb-1">GRS</p>
          <p class="text-xs text-gray-400">Global Recycle</p>
        </div>
        <div class="text-center group">
          <div class="w-24 h-24 bg-gradient-to-br from-gray-800 to-gray-850 rounded-2xl flex items-center justify-center mx-auto mb-3 shadow-lg border border-white/10 group-hover:border-blue-500/30 transition-all duration-300 group-hover:shadow-glow group-hover:scale-105">
            <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" /></svg>
          </div>
          <p class="text-sm font-semibold text-gray-200 mb-1">Fair Trade</p>
          <p class="text-xs text-gray-400">Certified</p>
        </div>
        <div class="text-center group">
          <div class="w-24 h-24 bg-gradient-to-br from-gray-800 to-gray-850 rounded-2xl flex items-center justify-center mx-auto mb-3 shadow-lg border border-white/10 group-hover:border-accent-gold/30 transition-all duration-300 group-hover:shadow-glow-gold group-hover:scale-105">
            <svg class="w-8 h-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 01-1.161.886l-.143.048a1.107 1.107 0 00-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 01-1.652.928l-.679-.906a1.125 1.125 0 00-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 00-8.862 12.872M12.75 3.031a9 9 0 016.69 14.036m0 0l-.177-.529A2.25 2.25 0 0017.128 15H16.5l-.324-.324a1.453 1.453 0 00-2.328.377l-.036.073a1.586 1.586 0 01-.982.816l-.99.282c-.55.157-.894.702-.8 1.267l.073.438c.08.474.49.821.97.821.846 0 1.598.542 1.865 1.345l.215.643m-5.276.339a6.105 6.105 0 01-1.24-.725" /></svg>
          </div>
          <p class="text-sm font-semibold text-gray-200 mb-1">GOTS</p>
          <p class="text-xs text-gray-400">Organic Textile</p>
        </div>
      </div>
    </div>

    {/* Productos sostenibles */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-brand-navy text-center mb-8">
        Colección Sostenible
      </h2>
      {sustainableProducts && sustainableProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {sustainableProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <p class="text-center text-gray-500">
          Pronto dispondremos de productos sostenibles certificados
        </p>
      )}
    </div>

    {/* CTA */}
    <div class="bg-gradient-to-r from-green-600 to-teal-600 text-white rounded-2xl p-12 text-center">
      <h2 class="text-3xl font-bold mb-4">Únete al Cambio</h2>
      <p class="text-lg mb-6 max-w-2xl mx-auto">
        Cada compra sostenible es un paso hacia un futuro mejor. Descubre cómo tu elección marca la diferencia.
      </p>
      <a 
        href="/productos" 
        class="inline-block bg-white text-green-600 font-semibold px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors"
      >
        Explorar Productos
      </a>
    </div>
  </div>
</PublicLayout>

---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import { supabase } from '@lib/supabase';

// Obtener productos nuevos (is_new = true)
const { data: newProducts } = await supabase
  .from('products')
  .select('*, category:categories!products_category_id_fkey(name, slug), gender:genders(name)')
  .eq('is_new', true)
  .order('created_at', { ascending: false })
  .limit(24);

// Separar por género para tabs
const womenProducts = newProducts?.filter(p => p.gender?.name?.toLowerCase().includes('mujer')) || [];
const menProducts = newProducts?.filter(p => p.gender?.name?.toLowerCase().includes('hombre')) || [];
---

<PublicLayout title="Novedades - FashionMarket">
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Hero elegante con estilo premium */}
    <section class="relative bg-dark-surface border border-white/10 rounded-2xl overflow-hidden mb-12">
      {/* Patrón de fondo sutil */}
      <div class="absolute inset-0 opacity-[0.02]">
        <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')]"></div>
      </div>
      
      {/* Acento esmeralda sutil en la parte superior */}
      <div class="absolute top-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-emerald-500/30 to-transparent"></div>
      
      <div class="relative py-16 px-6 text-center">
        <div class="flex items-center justify-center gap-3 mb-4">
          <h1 class="text-4xl md:text-6xl font-light text-white uppercase tracking-wider">
            Novedades
          </h1>
          {/* Badge elegante de novedad */}
          <div class="hidden md:flex items-center gap-2 px-4 py-1.5 bg-white/5 border border-emerald-500/20 rounded-lg backdrop-blur-sm">
            <span class="text-emerald-400 text-sm font-semibold tracking-wide">LO MÁS NUEVO</span>
          </div>
        </div>
        
        <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed mb-6">
          Descubre las últimas incorporaciones a nuestra colección exclusiva. Piezas únicas que marcan tendencia.
        </p>
        
        {/* Badge móvil */}
        <div class="flex md:hidden items-center justify-center gap-2 px-4 py-1.5 bg-white/5 border border-emerald-500/20 rounded-lg backdrop-blur-sm w-fit mx-auto">
          <span class="text-emerald-400 text-sm font-semibold tracking-wide">LO MÁS NUEVO</span>
        </div>
      </div>
    </section>

    {/* Tabs de género */}
    <div class="flex justify-center mb-8">
      <div class="inline-flex rounded-xl bg-dark-surface border border-white/10 p-1">
        <button 
          data-tab="mujer" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-lg transition-colors active"
        >
          MUJER ({womenProducts.length})
        </button>
        <button 
          data-tab="hombre" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-lg transition-colors"
        >
          HOMBRE ({menProducts.length})
        </button>
      </div>
    </div>

    {/* Productos de Mujer */}
    <div id="mujer-products" class="tab-content">
      {womenProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {womenProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">No hay novedades de mujer</h3>
          <p class="text-gray-400 mb-4">Pronto habrá nuevos productos disponibles</p>
          <a href="/mujer" class="text-accent-gold hover:text-accent-gold/80 transition-colors">Ver toda la colección de mujer →</a>
        </div>
      )}
    </div>

    {/* Productos de Hombre */}
    <div id="hombre-products" class="tab-content hidden">
      {menProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {menProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">No hay novedades de hombre</h3>
          <p class="text-gray-400 mb-4">Pronto habrá nuevos productos disponibles</p>
          <a href="/hombre" class="text-accent-gold hover:text-accent-gold/80 transition-colors">Ver toda la colección de hombre →</a>
        </div>
      )}
    </div>
  </div>
</PublicLayout>

<style>
  .tab-btn {
    color: #9ca3af;
  }
  .tab-btn.active {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(16, 185, 129, 0.05) 100%);
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #10b981;
  }
  .tab-btn:not(.active):hover {
    background-color: rgba(255, 255, 255, 0.05);
    color: #10b981;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab');
        
        // Actualizar botones
        tabBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Actualizar contenido
        tabContents.forEach(content => {
          if (content.id === `${tab}-products`) {
            content.classList.remove('hidden');
          } else {
            content.classList.add('hidden');
          }
        });
      });
    });
  });
</script>

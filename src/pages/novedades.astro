---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductCard from '@components/product/ProductCard.astro';
import { supabase } from '@lib/supabase';

// Obtener productos nuevos (is_new = true)
const { data: newProducts } = await supabase
  .from('products')
  .select('*, category:categories!products_category_id_fkey(name, slug), gender:genders(name)')
  .eq('is_new', true)
  .order('created_at', { ascending: false })
  .limit(24);

// Separar por género para tabs
const womenProducts = newProducts?.filter(p => p.gender?.name?.toLowerCase().includes('mujer')) || [];
const menProducts = newProducts?.filter(p => p.gender?.name?.toLowerCase().includes('hombre')) || [];
---

<PublicLayout title="Novedades - FashionMarket">
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {/* Hero */}
    <div class="text-center mb-12">
      <h1 class="font-serif text-4xl md:text-6xl font-bold text-brand-navy mb-4 tracking-tight">
        Novedades
      </h1>
      <p class="text-lg text-brand-slate max-w-2xl mx-auto">
        Descubre las últimas incorporaciones a nuestra colección. Piezas exclusivas que marcan tendencia.
      </p>
    </div>

    {/* Tabs de género */}
    <div class="flex justify-center mb-8">
      <div class="inline-flex rounded-lg border border-gray-200 p-1">
        <button 
          data-tab="mujer" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-md transition-colors active"
        >
          MUJER ({womenProducts.length})
        </button>
        <button 
          data-tab="hombre" 
          class="tab-btn px-6 py-2 text-sm font-medium rounded-md transition-colors"
        >
          HOMBRE ({menProducts.length})
        </button>
      </div>
    </div>

    {/* Productos de Mujer */}
    <div id="mujer-products" class="tab-content">
      {womenProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {womenProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <h3 class="text-xl font-semibold text-gray-600 mb-2">No hay novedades de mujer</h3>
          <p class="text-gray-500 mb-4">Pronto habrá nuevos productos disponibles</p>
          <a href="/mujer" class="text-brand-navy hover:underline">Ver toda la colección de mujer →</a>
        </div>
      )}
    </div>

    {/* Productos de Hombre */}
    <div id="hombre-products" class="tab-content hidden">
      {menProducts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {menProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <h3 class="text-xl font-semibold text-gray-600 mb-2">No hay novedades de hombre</h3>
          <p class="text-gray-500 mb-4">Pronto habrá nuevos productos disponibles</p>
          <a href="/hombre" class="text-brand-navy hover:underline">Ver toda la colección de hombre →</a>
        </div>
      )}
    </div>
  </div>
</PublicLayout>

<style>
  .tab-btn {
    color: #666;
  }
  .tab-btn.active {
    background-color: #1e293b;
    color: white;
  }
  .tab-btn:not(.active):hover {
    background-color: #f3f4f6;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab');
        
        // Actualizar botones
        tabBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Actualizar contenido
        tabContents.forEach(content => {
          if (content.id === `${tab}-products`) {
            content.classList.remove('hidden');
          } else {
            content.classList.add('hidden');
          }
        });
      });
    });
  });
</script>

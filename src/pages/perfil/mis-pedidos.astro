        originalBtn.innerHTML = '<svg class="animate-spin h-4 w-4 mr-2 inline" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Cancelando...';
      }

      try {
        // Obtener el token de Supabase
        const { createClient } = await import('@supabase/supabase-js');
        const supabase = createClient(
          import.meta.env.PUBLIC_SUPABASE_URL,
          import.meta.env.PUBLIC_SUPABASE_ANON_KEY
        );
        
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) {
          showToast('Debes iniciar sesi√≥n para cancelar un pedido', 'error');
          setTimeout(() => {
            window.location.href = '/auth/login?redirect=/perfil/mis-pedidos';
          }, 2000);
          return;
        }

        const response = await fetch('/api/orders/cancel', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${session.access_token}`
          },
          body: JSON.stringify({ orderId })
        });
        
        const result = await response.json();
        
        if (!result.success) {
          showToast(result.message || 'Error al cancelar el pedido', 'error');
          if (originalBtn) {
            originalBtn.disabled = false;
            originalBtn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg> Cancelar pedido';
          }
          return;
        }
        
        // Mostrar mensaje de √©xito y recargar despu√©s de 1 segundo
        showToast(result.message);
        setTimeout(() => {
          window.location.reload();
        }, 1500);
      } catch (error) {
        console.error('Error:', error);
        showToast('Error inesperado al cancelar el pedido', 'error');
        if (originalBtn) {
          originalBtn.disabled = false;
          originalBtn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg> Cancelar pedido';
        }
      }
    });

    // ===== MODAL DE DEVOLUCIONES =====
    let currentReturnOrderNumber: string | undefined;
    const returnModal = document.getElementById('return-modal');
    const returnModalOverlay = document.getElementById('return-modal-overlay');
    const closeReturnModalBtn = document.getElementById('close-return-modal');
    const copyOrderNumberBtn = document.getElementById('copy-order-number');
    const returnOrderNumberSpan = document.getElementById('return-order-number');
    const emailReturnLink = document.getElementById('email-return-link') as HTMLAnchorElement;
    const copyBtnText = document.getElementById('copy-btn-text');

    // Abrir modal de devoluciones
    document.querySelectorAll('.request-return').forEach(button => {
      button.addEventListener('click', (e) => {
        const btn = e.currentTarget as HTMLButtonElement;
        currentReturnOrderNumber = btn.dataset.orderNumber;
        
        if (returnOrderNumberSpan && currentReturnOrderNumber) {
          returnOrderNumberSpan.textContent = currentReturnOrderNumber;
        }
        
        // Actualizar el link de email con el n√∫mero de pedido
        if (emailReturnLink && currentReturnOrderNumber) {
          emailReturnLink.href = `mailto:devoluciones@tienda.com?subject=Solicitud de devoluci√≥n - Pedido ${currentReturnOrderNumber}&body=Hola,%0D%0A%0D%0AQuisiera solicitar la devoluci√≥n del pedido ${currentReturnOrderNumber}.%0D%0A%0D%0AMotivo de la devoluci√≥n:%0D%0A[Escribe aqu√≠ el motivo]%0D%0A%0D%0AGracias.`;
        }
        
        returnModal?.classList.remove('hidden');
      });
    });

    // Cerrar modal de devoluciones
    const closeReturnModal = () => {
      returnModal?.classList.add('hidden');
      currentReturnOrderNumber = undefined;
      if (copyBtnText) {
        copyBtnText.textContent = 'Copiar n¬∫ de pedido';
      }
    };

    closeReturnModalBtn?.addEventListener('click', closeReturnModal);
    returnModalOverlay?.addEventListener('click', closeReturnModal);

    // Copiar n√∫mero de pedido al portapapeles
    copyOrderNumberBtn?.addEventListener('click', async () => {
      if (!currentReturnOrderNumber) return;

      try {
        await navigator.clipboard.writeText(currentReturnOrderNumber);
        if (copyBtnText) {
          copyBtnText.textContent = '‚úì Copiado';
          setTimeout(() => {
            copyBtnText.textContent = 'Copiar n¬∫ de pedido';
          }, 2000);
        }
        showToast('N√∫mero de pedido copiado al portapapeles', 'success');
      } catch (err) {
        console.error('Error al copiar:', err);
        showToast('No se pudo copiar al portapapeles', 'error');
      }
    });
  </script>

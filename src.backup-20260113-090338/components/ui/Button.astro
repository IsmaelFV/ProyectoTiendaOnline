---
interface Props {
  variant?: 'primary' | 'secondary';
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  href?: string;
}

const { 
  variant = 'primary', 
  type = 'button',
  class: className = '',
  href
} = Astro.props;

const baseClasses = variant === 'primary' ? 'btn-primary' : 'btn-secondary';
const classes = `${baseClasses} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}

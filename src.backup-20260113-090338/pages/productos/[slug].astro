---
import PublicLayout from '@layouts/PublicLayout.astro';
import ProductGallery from '@components/product/ProductGallery.astro';
import AddToCartButton from '@components/islands/AddToCartButton';
import { supabase } from '@lib/supabase';
import { formatPrice } from '@lib/utils';

export async function getStaticPaths() {
  const { data: products } = await supabase
    .from('products')
    .select('*');

  return products?.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  })) || [];
}

const { product } = Astro.props;

let category = null;
if (product.category_id) {
  const { data } = await supabase
    .from('categories')
    .select('*')
    .eq('id', product.category_id)
    .single();
  category = data;
}
---

<PublicLayout 
  title={`${product.name} - FashionMarket`}
  description={product.description}
>
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <nav class="mb-8 text-sm text-brand-slate">
      <a href="/" class="hover:text-brand-navy">Inicio</a>
      <span class="mx-2">/</span>
      <a href="/productos" class="hover:text-brand-navy">Productos</a>
      {category && (
        <>
          <span class="mx-2">/</span>
          <a href={`/categoria/${category.slug}`} class="hover:text-brand-navy">
            {category.name}
          </a>
        </>
      )}
      <span class="mx-2">/</span>
      <span class="text-brand-navy">{product.name}</span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div>
        <ProductGallery images={product.images} productName={product.name} />
      </div>

      <div class="space-y-6">
        <div>
          {category && (
            <a 
              href={`/categoria/${category.slug}`}
              class="text-sm text-brand-gold hover:text-brand-gold-dark font-medium uppercase tracking-wide"
            >
              {category.name}
            </a>
          )}
          <h1 class="font-serif text-4xl md:text-5xl font-bold text-brand-navy mt-2">
            {product.name}
          </h1>
        </div>

        <div class="text-3xl font-serif font-bold text-brand-navy">
          {formatPrice(product.price)}
        </div>

        {product.description && (
          <div class="prose prose-lg text-brand-charcoal">
            <p>{product.description}</p>
          </div>
        )}

        <div class="border-t border-brand-slate/20 pt-6">
          {product.stock > 0 ? (
            <>
              <div class="mb-4">
                <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">
                  ✓ En stock ({product.stock} unidades)
                </span>
              </div>
              <AddToCartButton 
                client:load
                product={{
                  id: product.id,
                  name: product.name,
                  price: product.price,
                  slug: product.slug,
                  image: product.images?.[0],
                  sizes: product.sizes || [],
                }}
              />
            </>
          ) : (
            <div class="text-center py-8">
              <p class="text-red-600 font-semibold text-lg mb-4">Producto agotado</p>
              <p class="text-brand-slate">Este producto no está disponible actualmente</p>
            </div>
          )}
        </div>

        <div class="border-t border-brand-slate/20 pt-6 space-y-4 text-sm text-brand-slate">
          <div class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 flex-shrink-0 mt-0.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
            </svg>
            <div>
              <p class="font-medium text-brand-charcoal">Envío gratuito</p>
              <p>En pedidos superiores a 100€</p>
            </div>
          </div>
          
          <div class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 flex-shrink-0 mt-0.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
            </svg>
            <div>
              <p class="font-medium text-brand-charcoal">Devoluciones fáciles</p>
              <p>30 días para cambios y devoluciones</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</PublicLayout>

---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title?: string;
}

const { title = 'Admin - FashionMarket' } = Astro.props;
---

<BaseLayout title={title}>
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-brand-navy text-white">
      <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center space-x-8">
            <a href="/admin" class="font-serif text-xl font-bold">
              FashionMarket Admin
            </a>
            <a href="/admin/productos" class="hover:text-brand-gold transition-colors">
              Productos
            </a>
          </div>
          <div>
            <form action="/api/auth/logout" method="POST">
              <button type="submit" class="text-sm hover:text-brand-gold transition-colors">
                Cerrar Sesi√≥n
              </button>
            </form>
          </div>
        </div>
      </div>
    </nav>
    
    <main class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
  </div>
</BaseLayout>
